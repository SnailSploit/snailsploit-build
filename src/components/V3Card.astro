---
// V3Card.astro - Feature card for homepage
interface Props {
  title: string;
  description: string;
  cta: string;
  href: string;
  isPrimary?: boolean;
}

const { title, description, cta, href, isPrimary = false } = Astro.props;
---

<div class="bg-zinc-900/50 border border-white/[0.08] rounded-2xl p-6 md:p-8 flex flex-col min-h-[200px]">
  <h3 class="text-white text-lg font-semibold mb-3">{title}</h3>
  
  <p class="text-gray-500 text-sm leading-relaxed flex-1 mb-6">
    {description}
  </p>

  <a
    href={href}
    class:list={[
      "inline-flex items-center gap-2 px-4 py-2.5 text-[13px] font-medium rounded-lg transition-all w-fit",
      isPrimary
        ? "bg-[#dc2626] hover:bg-[#ef4444] text-white"
        : "border border-white/20 hover:border-white/40 text-white"
    ]}
  >
    {cta}
    <svg class="w-3.5 h-3.5" viewBox="0 0 24 24" fill="currentColor">
      <path d="M10 6L8.59 7.41 13.17 12l-4.58 4.59L10 18l6-6z"/>
    </svg>
  </a>
</div>
