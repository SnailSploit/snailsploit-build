---
import SearchBar from './SearchBar.tsx';
import MobileNav from './MobileNav.tsx';

const navItems = [
  { name: 'About', href: '/about' },
  { name: 'Adversarial Minds', href: '/adversarial-minds' },
  {
    name: 'Frameworks',
    href: '/frameworks',
    children: [
      { name: 'AATMF', href: '/frameworks/aatmf' },
      { name: 'P.R.O.M.P.T', href: '/frameworks/prompt' },
      { name: 'SEF', href: '/frameworks/sef' },
    ]
  },
  {
    name: 'Security Research',
    href: '/security-research',
    children: [
      { name: 'CVEs', href: '/security-research/cves' },
      { name: 'General Research', href: '/security-research/general' },
    ]
  },
  {
    name: 'AI Security',
    href: '/ai-security',
    children: [
      { name: 'Jailbreaking', href: '/ai-security/jailbreaking' },
      { name: 'Prompt Injection', href: '/ai-security/prompt-injection' },
      { name: 'Wiki', href: '/ai-security/wiki' },
    ]
  },
  { name: 'Tools', href: '/tools' },
  { name: 'Writing', href: '/writing' },
];
---

<nav class="nav-glass">
  <div class="nav-glow"></div>
  <div class="header-inner">
    <div class="flex items-center justify-between gap-4 md:gap-8 h-32 md:h-44 px-4">
      <!-- Logo - Left -->
      <a href="/" class="logo-link flex items-center group">
        <img
          src="/images/navbar.png"
          alt="SnailSploit"
          class="h-28 md:h-40 max-w-[495px] md:max-w-[720px] object-contain opacity-95 group-hover:opacity-100 transition-all duration-300 group-hover:scale-105"
        />
      </a>

      <!-- Nav Items - Center -->
      <div class="hidden md:flex items-center justify-center">
        <div class="flex items-center gap-1">
          {navItems.map((item) => (
            <div class="relative group">
              <a
                href={item.href}
                class="nav-item text-sm font-medium px-4 py-2 rounded-lg whitespace-nowrap"
              >
                {item.name}
                {item.children && <span class="ml-1 opacity-50 text-xs transition-transform duration-200 inline-block group-hover:rotate-180">▾</span>}
              </a>
              {item.children && (
                <div class="dropdown-menu">
                  <div class="py-2">
                    {item.children.map((child) => (
                      <a
                        href={child.href}
                        class="dropdown-item"
                      >
                        {child.name}
                      </a>
                    ))}
                  </div>
                </div>
              )}
            </div>
          ))}
        </div>
      </div>

      <!-- Terminal Search - Right (Desktop) -->
      <div class="hidden lg:block w-52">
        <SearchBar client:load />
      </div>

      <!-- Mobile Nav Button -->
      <div class="md:hidden">
        <MobileNav client:load navItems={navItems} />
      </div>
    </div>
  </div>
</nav>

<style>
  .nav-glass {
    background: rgba(10, 10, 10, 0.85);
    backdrop-filter: blur(20px);
    -webkit-backdrop-filter: blur(20px);
    border-bottom: 1px solid rgba(255, 255, 255, 0.05);
    position: sticky;
    top: 0;
    z-index: 100;
  }

  /* Animated glow line under nav */
  .nav-glow {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    height: 1px;
    background: linear-gradient(90deg,
      transparent 0%,
      rgba(57, 255, 20, 0.3) 20%,
      rgba(57, 255, 20, 0.8) 50%,
      rgba(57, 255, 20, 0.3) 80%,
      transparent 100%
    );
    background-size: 200% 100%;
    animation: glowSlide 8s ease-in-out infinite;
  }

  @keyframes glowSlide {
    0%, 100% { background-position: 200% 0; }
    50% { background-position: -200% 0; }
  }

  /* Logo effects */
  .logo-container {
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .logo-ring {
    position: absolute;
    width: 50px;
    height: 50px;
    border: 1px solid transparent;
    border-radius: 50%;
    transition: all 0.4s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .logo-link:hover .logo-ring {
    border-color: rgba(57, 255, 20, 0.5);
    transform: scale(1.2);
    box-shadow: 0 0 20px rgba(57, 255, 20, 0.3);
  }

  .logo-link:hover span {
    color: var(--color-accent-red);
  }

  /* Nav item effects */
  .nav-item {
    font-family: 'Inter', var(--font-sans), sans-serif;
    color: var(--color-text-secondary);
    transition: all 0.3s cubic-bezier(0.16, 1, 0.3, 1);
    position: relative;
    overflow: hidden;
  }

  .nav-item::before {
    content: '';
    position: absolute;
    inset: 0;
    background: radial-gradient(circle at center, rgba(57, 255, 20, 0.15), transparent 70%);
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .nav-item::after {
    content: '';
    position: absolute;
    bottom: 4px;
    left: 50%;
    width: 0;
    height: 2px;
    background: linear-gradient(90deg, transparent, var(--color-accent), transparent);
    transition: all 0.4s cubic-bezier(0.16, 1, 0.3, 1);
    transform: translateX(-50%);
    border-radius: 1px;
    box-shadow: 0 0 10px rgba(57, 255, 20, 0.5);
  }

  .nav-item:hover {
    color: var(--color-text-primary);
    transform: translateY(-1px);
  }

  .nav-item:hover::before {
    opacity: 1;
  }

  .nav-item:hover::after {
    width: 80%;
  }

  /* Dropdown effects */
  .dropdown-menu {
    position: absolute;
    left: 50%;
    transform: translateX(-50%) translateY(12px) scale(0.95);
    margin-top: 4px;
    width: 220px;
    opacity: 0;
    visibility: hidden;
    transition: all 0.3s cubic-bezier(0.16, 1, 0.3, 1);
    z-index: 50;
    background: rgba(22, 27, 34, 0.98);
    backdrop-filter: blur(20px);
    -webkit-backdrop-filter: blur(20px);
    border: 1px solid rgba(57, 255, 20, 0.15);
    border-radius: 16px;
    box-shadow:
      0 20px 40px rgba(0, 0, 0, 0.5),
      0 0 30px rgba(57, 255, 20, 0.1);
    overflow: hidden;
  }

  .dropdown-menu::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 2px;
    background: linear-gradient(90deg, transparent, var(--color-accent), transparent);
  }

  .group:hover .dropdown-menu {
    opacity: 1;
    visibility: visible;
    transform: translateX(-50%) translateY(0) scale(1);
  }

  .dropdown-item {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 0.875rem 1.5rem;
    font-family: 'Inter', var(--font-sans), sans-serif;
    font-size: 0.875rem;
    font-weight: 500;
    color: var(--color-text-secondary);
    transition: all 0.25s cubic-bezier(0.16, 1, 0.3, 1);
    border-left: 2px solid transparent;
  }

  .dropdown-item:hover {
    color: #ffffff;
    background: rgba(57, 255, 20, 0.12);
    border-left-color: var(--color-accent);
    padding-left: 1.75rem;
  }

  .dropdown-item::after {
    content: '→';
    opacity: 0;
    transform: translateX(-8px);
    transition: all 0.25s ease;
    color: var(--color-accent);
  }

  .dropdown-item:hover::after {
    opacity: 1;
    transform: translateX(0);
  }

  /* Staggered animation for dropdown items */
  .dropdown-menu .py-2 a:nth-child(1) { transition-delay: 0ms; }
  .dropdown-menu .py-2 a:nth-child(2) { transition-delay: 30ms; }
  .dropdown-menu .py-2 a:nth-child(3) { transition-delay: 60ms; }
  .dropdown-menu .py-2 a:nth-child(4) { transition-delay: 90ms; }

  .group:hover .dropdown-menu .py-2 a {
    animation: fadeSlideIn 0.3s ease forwards;
  }

  @keyframes fadeSlideIn {
    from {
      opacity: 0;
      transform: translateX(-10px);
    }
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }
</style>

