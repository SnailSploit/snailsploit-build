---
import V3SnailLogo from './V3SnailLogo.astro';
import SearchBar from './SearchBar.tsx';

const navItems = [
  { name: 'About', href: '/about' },
  { name: 'Adversarial Minds', href: '/adversarial-minds' },
  {
    name: 'Frameworks',
    href: '/frameworks',
    children: [
      { name: 'AATMF', href: '/frameworks/aatmf' },
      { name: 'P.R.O.M.P.T', href: '/frameworks/prompt' },
      { name: 'SEF', href: '/frameworks/sef' },
    ]
  },
  {
    name: 'Security Research',
    href: '/security-research',
    children: [
      { name: 'CVEs', href: '/security-research/cves' },
      { name: 'General Research', href: '/security-research/general' },
    ]
  },
  {
    name: 'AI Security',
    href: '/ai-security',
    children: [
      { name: 'Jailbreaking', href: '/ai-security/jailbreaking' },
      { name: 'Prompt Injection', href: '/ai-security/prompt-injection' },
    ]
  },
  { name: 'Tools', href: '/tools' },
  { name: 'Writing', href: '/writing' },
];
---

<nav class="border-b" style="border-color: var(--color-border); background-color: var(--color-surface);">
  <div class="header-inner">
    <div class="flex items-center justify-between h-20">
      <div class="flex items-center">
        <a href="/" class="flex items-center gap-3 group">
          <V3SnailLogo size={48} />
          <div class="flex flex-col">
            <span class="text-xl font-bold tracking-tight group-hover:text-[var(--color-accent-red-hover)] transition-colors" style="color: var(--color-accent-red);">
              SnailSploit
            </span>
            <span class="text-xs uppercase tracking-widest" style="color: var(--color-text-muted);">
              Kai Aizen
            </span>
          </div>
        </a>
      </div>

      <div class="hidden md:flex items-center gap-6">
        <div class="flex items-baseline space-x-4">
          {navItems.map((item) => (
            <div class="relative group">
              <a
                href={item.href}
                class="nav-link text-sm font-medium px-3 py-2 transition-colors"
                style="color: var(--color-text-secondary);"
              >
                {item.name}
                {item.children && <span class="ml-1">â–¾</span>}
              </a>
              {item.children && (
                <div class="absolute left-0 mt-0 w-56 opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200 z-50" style="background-color: var(--color-surface); border: 1px solid var(--color-border);">
                  <div class="py-2">
                    {item.children.map((child) => (
                      <a
                        href={child.href}
                        class="block px-4 py-2 text-sm font-medium hover:bg-[var(--color-surface-hover)] transition-colors"
                        style="color: var(--color-text-secondary);"
                      >
                        {child.name}
                      </a>
                    ))}
                  </div>
                </div>
              )}
            </div>
          ))}
        </div>

        <!-- Terminal Search -->
        <div class="hidden lg:block w-64">
          <SearchBar client:load />
        </div>
      </div>
    </div>
  </div>
</nav>

