---
import SearchBar from './SearchBar.tsx';

const navItems = [
  { name: 'About', href: '/about' },
  { name: 'Adversarial Minds', href: '/adversarial-minds' },
  {
    name: 'Frameworks',
    href: '/frameworks',
    children: [
      { name: 'AATMF', href: '/frameworks/aatmf' },
      { name: 'P.R.O.M.P.T', href: '/frameworks/prompt' },
      { name: 'SEF', href: '/frameworks/sef' },
    ]
  },
  {
    name: 'Security Research',
    href: '/security-research',
    children: [
      { name: 'CVEs', href: '/security-research/cves' },
      { name: 'General Research', href: '/security-research/general' },
    ]
  },
  {
    name: 'AI Security',
    href: '/ai-security',
    children: [
      { name: 'Jailbreaking', href: '/ai-security/jailbreaking' },
      { name: 'Prompt Injection', href: '/ai-security/prompt-injection' },
      { name: 'Wiki', href: '/ai-security/wiki' },
    ]
  },
  { name: 'Tools', href: '/tools' },
  { name: 'Writing', href: '/writing' },
];
---

<nav class="nav-container">
  <div class="nav-inner">
    <!-- Logo -->
    <a href="/" class="logo-link">
      <img
        src="/images/navbar.png"
        alt="SnailSploit"
        class="logo-img"
      />
      <span class="logo-text">SnailSploit</span>
    </a>

    <!-- Desktop Nav -->
    <div class="desktop-nav">
      {navItems.map((item) => (
        <div class="nav-group">
          <a href={item.href} class="nav-link">
            {item.name}
            {item.children && <span class="dropdown-arrow">â–¾</span>}
          </a>
          {item.children && (
            <div class="dropdown">
              {item.children.map((child) => (
                <a href={child.href} class="dropdown-link">
                  {child.name}
                </a>
              ))}
            </div>
          )}
        </div>
      ))}
    </div>

    <!-- Desktop Search -->
    <div class="desktop-search">
      <SearchBar client:load />
    </div>

    <!-- Mobile Menu Button -->
    <button class="mobile-menu-btn" id="mobile-menu-btn" aria-label="Open menu">
      <span class="hamburger-line"></span>
      <span class="hamburger-line"></span>
      <span class="hamburger-line"></span>
    </button>
  </div>
</nav>

<!-- Mobile Menu Overlay -->
<div class="mobile-overlay" id="mobile-overlay"></div>

<!-- Mobile Menu Drawer -->
<div class="mobile-drawer" id="mobile-drawer">
  <div class="mobile-drawer-header">
    <span class="mobile-drawer-title">Menu</span>
    <button class="mobile-close-btn" id="mobile-close-btn" aria-label="Close menu">
      <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <path d="M18 6L6 18M6 6l12 12" />
      </svg>
    </button>
  </div>

  <nav class="mobile-nav-links">
    {navItems.map((item) => (
      <div class="mobile-nav-group">
        <a href={item.href} class="mobile-nav-link">{item.name}</a>
        {item.children && (
          <div class="mobile-subnav">
            {item.children.map((child) => (
              <a href={child.href} class="mobile-subnav-link">{child.name}</a>
            ))}
          </div>
        )}
      </div>
    ))}
  </nav>
</div>

<style>
  /* Nav Container */
  .nav-container {
    position: sticky;
    top: 0;
    z-index: 100;
    background: rgba(13, 17, 23, 0.95);
    backdrop-filter: blur(20px);
    -webkit-backdrop-filter: blur(20px);
    border-bottom: 1px solid rgba(57, 255, 20, 0.15);
  }

  .nav-inner {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 1rem;
    height: 70px;
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 1rem;
  }

  /* Logo */
  .logo-link {
    flex-shrink: 0;
    display: flex;
    align-items: center;
    gap: 0.75rem;
    text-decoration: none;
  }

  .logo-img {
    height: 48px;
    width: auto;
    object-fit: contain;
    image-rendering: -webkit-optimize-contrast;
    image-rendering: crisp-edges;
  }

  .logo-text {
    display: none;
    font-size: 1.125rem;
    font-weight: 600;
    color: #E6EDF3;
    letter-spacing: -0.01em;
  }

  @media (min-width: 640px) {
    .logo-text {
      display: block;
    }
  }

  /* Desktop Nav */
  .desktop-nav {
    display: none;
    align-items: center;
    gap: 0.25rem;
  }

  .nav-group {
    position: relative;
  }

  .nav-link {
    display: flex;
    align-items: center;
    gap: 0.25rem;
    padding: 0.5rem 0.75rem;
    color: #8B949E;
    font-size: 0.875rem;
    font-weight: 500;
    text-decoration: none;
    border-radius: 6px;
    transition: all 0.2s ease;
    white-space: nowrap;
  }

  .nav-link:hover {
    color: #E6EDF3;
    background: rgba(57, 255, 20, 0.1);
  }

  .dropdown-arrow {
    font-size: 0.7rem;
    opacity: 0.6;
    transition: transform 0.2s ease;
  }

  .nav-group:hover .dropdown-arrow {
    transform: rotate(180deg);
  }

  /* Dropdown */
  .dropdown {
    position: absolute;
    top: 100%;
    left: 50%;
    transform: translateX(-50%);
    min-width: 180px;
    padding: 0.5rem;
    margin-top: 0.5rem;
    background: rgba(22, 27, 34, 0.98);
    border: 1px solid rgba(57, 255, 20, 0.2);
    border-radius: 12px;
    opacity: 0;
    visibility: hidden;
    transition: all 0.2s ease;
  }

  .nav-group:hover .dropdown {
    opacity: 1;
    visibility: visible;
  }

  .dropdown-link {
    display: block;
    padding: 0.625rem 1rem;
    color: #8B949E;
    font-size: 0.875rem;
    text-decoration: none;
    border-radius: 6px;
    transition: all 0.2s ease;
  }

  .dropdown-link:hover {
    color: #E6EDF3;
    background: rgba(57, 255, 20, 0.15);
  }

  /* Desktop Search */
  .desktop-search {
    display: none;
    width: 200px;
  }

  /* Mobile Menu Button */
  .mobile-menu-btn {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    gap: 5px;
    width: 44px;
    height: 44px;
    background: rgba(57, 255, 20, 0.1);
    border: 1px solid rgba(57, 255, 20, 0.3);
    border-radius: 8px;
    cursor: pointer;
    transition: all 0.2s ease;
  }

  .mobile-menu-btn:hover {
    background: rgba(57, 255, 20, 0.2);
  }

  .hamburger-line {
    width: 20px;
    height: 2px;
    background: #39FF14;
    border-radius: 2px;
    transition: all 0.3s ease;
  }

  /* Mobile Overlay */
  .mobile-overlay {
    position: fixed;
    inset: 0;
    background: rgba(0, 0, 0, 0.7);
    backdrop-filter: blur(4px);
    z-index: 9998;
    opacity: 0;
    visibility: hidden;
    transition: all 0.3s ease;
  }

  .mobile-overlay.active {
    opacity: 1;
    visibility: visible;
  }

  /* Mobile Drawer */
  .mobile-drawer {
    position: fixed;
    top: 0;
    right: 0;
    width: 300px;
    max-width: 85vw;
    height: 100vh;
    background: #0D1117;
    border-left: 1px solid rgba(57, 255, 20, 0.2);
    z-index: 9999;
    transform: translateX(100%);
    transition: transform 0.3s ease;
    display: flex;
    flex-direction: column;
  }

  .mobile-drawer.active {
    transform: translateX(0);
  }

  .mobile-drawer-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 1rem;
    border-bottom: 1px solid #30363D;
  }

  .mobile-drawer-title {
    color: #E6EDF3;
    font-weight: 600;
  }

  .mobile-close-btn {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    background: transparent;
    border: none;
    color: #8B949E;
    cursor: pointer;
    border-radius: 8px;
    transition: all 0.2s ease;
  }

  .mobile-close-btn:hover {
    color: #E6EDF3;
    background: rgba(255, 255, 255, 0.1);
  }

  /* Mobile Nav Links */
  .mobile-nav-links {
    flex: 1;
    overflow-y: auto;
    padding: 1rem 0;
  }

  .mobile-nav-group {
    border-bottom: 1px solid #21262d;
  }

  .mobile-nav-link {
    display: block;
    padding: 1rem 1.5rem;
    color: #E6EDF3;
    font-size: 1rem;
    font-weight: 500;
    text-decoration: none;
    transition: all 0.2s ease;
  }

  .mobile-nav-link:hover {
    background: rgba(57, 255, 20, 0.1);
    color: #39FF14;
  }

  .mobile-subnav {
    background: rgba(0, 0, 0, 0.2);
  }

  .mobile-subnav-link {
    display: block;
    padding: 0.75rem 1.5rem 0.75rem 2.5rem;
    color: #8B949E;
    font-size: 0.9rem;
    text-decoration: none;
    transition: all 0.2s ease;
  }

  .mobile-subnav-link:hover {
    color: #39FF14;
    background: rgba(57, 255, 20, 0.05);
  }

  /* Desktop Breakpoint */
  @media (min-width: 1024px) {
    .nav-inner {
      height: 90px;
      padding: 0 2rem;
    }

    .logo-img {
      height: 56px;
    }

    .desktop-nav {
      display: flex;
    }

    .desktop-search {
      display: block;
    }

    .mobile-menu-btn {
      display: none;
    }
  }

  /* Large Desktop */
  @media (min-width: 1280px) {
    .nav-inner {
      height: 100px;
    }

    .logo-img {
      height: 64px;
    }

    .nav-link {
      padding: 0.5rem 1rem;
    }
  }
</style>

<script>
  const menuBtn = document.getElementById('mobile-menu-btn');
  const closeBtn = document.getElementById('mobile-close-btn');
  const overlay = document.getElementById('mobile-overlay');
  const drawer = document.getElementById('mobile-drawer');

  function openMenu() {
    overlay?.classList.add('active');
    drawer?.classList.add('active');
    document.body.style.overflow = 'hidden';
  }

  function closeMenu() {
    overlay?.classList.remove('active');
    drawer?.classList.remove('active');
    document.body.style.overflow = '';
  }

  menuBtn?.addEventListener('click', openMenu);
  closeBtn?.addEventListener('click', closeMenu);
  overlay?.addEventListener('click', closeMenu);

  // Close on escape
  document.addEventListener('keydown', (e) => {
    if (e.key === 'Escape') closeMenu();
  });

  // Close when clicking nav links
  drawer?.querySelectorAll('a').forEach(link => {
    link.addEventListener('click', closeMenu);
  });
</script>
