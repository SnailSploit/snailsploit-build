---
const navItems = [
  { name: 'About', href: '/about' },
  { name: 'Adversarial Minds', href: '/adversarial-minds' },
  {
    name: 'Frameworks',
    href: '/frameworks',
    children: [
      { name: 'AATMF', href: '/frameworks/aatmf' },
      { name: 'P.R.O.M.P.T', href: '/frameworks/prompt' },
      { name: 'SEF', href: '/frameworks/sef' },
    ]
  },
  {
    name: 'Security Research',
    href: '/security-research',
    children: [
      { name: 'CVEs', href: '/security-research/cves' },
      { name: 'General Research', href: '/security-research/general' },
    ]
  },
  {
    name: 'AI Security',
    href: '/ai-security',
    children: [
      { name: 'Jailbreaking', href: '/ai-security/jailbreaking' },
      { name: 'Prompt Injection', href: '/ai-security/prompt-injection' },
    ]
  },
  { name: 'Tools', href: '/tools' },
  { name: 'Writing', href: '/writing' },
];
---

<nav class="border-b" style="border-color: var(--color-border); background-color: var(--color-surface);">
  <div class="header-inner">
    <div class="flex items-center justify-between h-20">
      <div class="flex items-center">
        <a href="/" class="flex items-center gap-3">
          <img
            src="/images/logo.png"
            srcset="/images/logo.png 1x, /images/logo@2x.png 2x"
            alt="SnailSploit - Kai Aizen"
            width="70"
            height="70"
            class="h-[70px] w-auto"
            style="mix-blend-mode: lighten; filter: contrast(1.2) brightness(1.1); background: transparent; image-rendering: -webkit-optimize-contrast;"
            loading="eager"
            decoding="async"
          />
          <div class="flex flex-col">
            <span class="font-mono text-xl font-bold" style="color: var(--color-accent-red);">
              SnailSploit
            </span>
            <span class="font-mono text-xs uppercase tracking-[0.1em]" style="color: var(--color-text-muted);">
              Kai Aizen
            </span>
          </div>
        </a>
      </div>
      <div class="hidden md:block">
        <div class="ml-10 flex items-baseline space-x-6">
          {navItems.map((item) => (
            <div class="relative group">
              <a
                href={item.href}
                class="nav-link font-mono text-sm px-3 py-2 transition-colors"
                style="color: var(--color-text-secondary);"
              >
                {item.name}
                {item.children && <span class="ml-1">â–¾</span>}
              </a>
              {item.children && (
                <div class="absolute left-0 mt-0 w-56 opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200 z-50" style="background-color: var(--color-surface); border: 1px solid var(--color-border);">
                  <div class="py-2">
                    {item.children.map((child) => (
                      <a
                        href={child.href}
                        class="block px-4 py-2 text-sm font-mono hover:bg-[var(--color-surface-hover)] transition-colors"
                        style="color: var(--color-text-secondary);"
                      >
                        {child.name}
                      </a>
                    ))}
                  </div>
                </div>
              )}
            </div>
          ))}
        </div>
      </div>
    </div>
  </div>
</nav>
