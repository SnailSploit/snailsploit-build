---
import SearchBar from './SearchBar.tsx';

const navItems = [
  { name: 'About', href: '/about' },
  { name: 'Adversarial Minds', href: '/adversarial-minds' },
  {
    name: 'Frameworks',
    href: '/frameworks',
    children: [
      { name: 'AATMF', href: '/frameworks/aatmf' },
      { name: 'P.R.O.M.P.T', href: '/frameworks/prompt' },
      { name: 'SEF', href: '/frameworks/sef' },
    ]
  },
  {
    name: 'Security Research',
    href: '/security-research',
    children: [
      { name: 'CVEs', href: '/security-research/cves' },
      { name: 'General Research', href: '/security-research/general' },
    ]
  },
  {
    name: 'AI Security',
    href: '/ai-security',
    children: [
      { name: 'Jailbreaking', href: '/ai-security/jailbreaking' },
      { name: 'Prompt Injection', href: '/ai-security/prompt-injection' },
      { name: 'Wiki', href: '/ai-security/wiki' },
    ]
  },
  { name: 'Tools', href: '/tools' },
  { name: 'Writing', href: '/writing' },
];
---

<nav class="nav-glass">
  <div class="header-inner">
    <div class="grid grid-cols-[auto_1fr_auto] items-center gap-8 h-20">
      <!-- Logo - Left -->
      <a href="/" class="logo-link flex flex-col items-center group">
        <img
          src="/images/logo.png"
          alt="SnailSploit"
          class="h-9 w-auto invert opacity-90 group-hover:opacity-100 transition-all duration-300"
        />
        <span class="text-[10px] uppercase tracking-[0.15em] mt-1 transition-colors duration-300" style="color: var(--color-text-muted);">
          Kai Aizen
        </span>
      </a>

      <!-- Nav Items - Center -->
      <div class="hidden md:flex items-center justify-center">
        <div class="flex items-center gap-1">
          {navItems.map((item) => (
            <div class="relative group">
              <a
                href={item.href}
                class="nav-item text-sm font-medium px-4 py-2 rounded-lg whitespace-nowrap"
              >
                {item.name}
                {item.children && <span class="ml-1 opacity-50 text-xs transition-transform duration-200 inline-block group-hover:rotate-180">â–¾</span>}
              </a>
              {item.children && (
                <div class="dropdown-menu">
                  <div class="py-2">
                    {item.children.map((child) => (
                      <a
                        href={child.href}
                        class="dropdown-item"
                      >
                        {child.name}
                      </a>
                    ))}
                  </div>
                </div>
              )}
            </div>
          ))}
        </div>
      </div>

      <!-- Terminal Search - Right -->
      <div class="hidden lg:block w-52">
        <SearchBar client:load />
      </div>
    </div>
  </div>
</nav>

<style>
  .nav-glass {
    background: rgba(20, 20, 20, 0.8);
    backdrop-filter: blur(20px);
    -webkit-backdrop-filter: blur(20px);
    border-bottom: 1px solid rgba(255, 255, 255, 0.05);
    position: sticky;
    top: 0;
    z-index: 100;
  }

  .logo-link:hover span {
    color: var(--color-accent-red);
  }

  .nav-item {
    color: var(--color-text-secondary);
    transition: all 0.2s cubic-bezier(0.16, 1, 0.3, 1);
    position: relative;
  }

  .nav-item::after {
    content: '';
    position: absolute;
    bottom: 4px;
    left: 50%;
    width: 0;
    height: 2px;
    background: linear-gradient(90deg, var(--color-accent-red), var(--color-accent-red-hover));
    transition: all 0.3s cubic-bezier(0.16, 1, 0.3, 1);
    transform: translateX(-50%);
    border-radius: 1px;
  }

  .nav-item:hover {
    color: var(--color-text-primary);
    background: rgba(255, 255, 255, 0.03);
  }

  .nav-item:hover::after {
    width: 60%;
  }

  .dropdown-menu {
    position: absolute;
    left: 50%;
    transform: translateX(-50%) translateY(8px);
    margin-top: 4px;
    width: 200px;
    opacity: 0;
    visibility: hidden;
    transition: all 0.25s cubic-bezier(0.16, 1, 0.3, 1);
    z-index: 50;
    background: rgba(20, 20, 20, 0.95);
    backdrop-filter: blur(20px);
    -webkit-backdrop-filter: blur(20px);
    border: 1px solid rgba(255, 255, 255, 0.08);
    border-radius: 12px;
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.5);
    overflow: hidden;
  }

  .group:hover .dropdown-menu {
    opacity: 1;
    visibility: visible;
    transform: translateX(-50%) translateY(0);
  }

  .dropdown-item {
    display: block;
    padding: 0.75rem 1.25rem;
    font-size: 0.875rem;
    font-weight: 500;
    color: var(--color-text-secondary);
    transition: all 0.2s ease;
    position: relative;
  }

  .dropdown-item::before {
    content: '';
    position: absolute;
    left: 0;
    top: 50%;
    transform: translateY(-50%);
    width: 0;
    height: 60%;
    background: var(--color-accent-red);
    transition: width 0.2s ease;
    border-radius: 0 2px 2px 0;
  }

  .dropdown-item:hover {
    color: var(--color-text-primary);
    background: rgba(220, 38, 38, 0.1);
    padding-left: 1.5rem;
  }

  .dropdown-item:hover::before {
    width: 3px;
  }
</style>

