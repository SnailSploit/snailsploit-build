---
// V3Hero.astro - Hero section with CSS smoke effect (no images needed)
import V3Nav from './V3Nav.astro';
---

<section class="v3-hero relative mx-4 md:mx-8 mt-4 rounded-3xl overflow-hidden">
  <!-- CSS-only smoky background -->
  <div class="absolute inset-0 v3-smoke-bg"></div>

  <!-- Content -->
  <div class="relative z-10">
    <V3Nav variant="hero" />

    <div class="flex flex-col items-center justify-center text-center px-6 py-24 md:py-32 min-h-[60vh]">
      <!-- Headline -->
      <h1 class="text-4xl md:text-5xl lg:text-6xl font-light leading-tight mb-10">
        <span class="text-white">The </span>
        <span class="text-[#39FF14] font-medium">Human Link</span>
        <span class="text-white"> in</span>
        <br />
        <span class="text-gray-400">Adversarial Security</span>
      </h1>

      <!-- CTAs -->
      <div class="flex flex-wrap gap-4 justify-center">
        <a
          href="/about/"
          class="inline-flex items-center gap-2 px-6 py-3 bg-[#39FF14] hover:bg-[#4dff33] text-white text-sm font-medium rounded-lg transition-colors"
        >
          About Me
          <svg class="w-4 h-4" viewBox="0 0 24 24" fill="currentColor">
            <path d="M10 6L8.59 7.41 13.17 12l-4.58 4.59L10 18l6-6z"/>
          </svg>
        </a>

        <a
          href="/frameworks/"
          class="inline-flex items-center gap-2 px-6 py-3 border border-white/20 hover:border-white/40 text-white text-sm font-medium rounded-lg transition-colors"
        >
          View Frameworks
          <svg class="w-4 h-4" viewBox="0 0 24 24" fill="currentColor">
            <path d="M10 6L8.59 7.41 13.17 12l-4.58 4.59L10 18l6-6z"/>
          </svg>
        </a>
      </div>
    </div>
  </div>
</section>

<style>
  /* CSS-only smoke/cloud effect */
  .v3-smoke-bg {
    background: 
      /* Dark vignette overlay */
      radial-gradient(ellipse at center, transparent 0%, rgba(10,10,10,0.4) 50%, rgba(10,10,10,0.9) 100%),
      /* Smoky layers */
      radial-gradient(ellipse at 20% 30%, rgba(60,60,60,0.4) 0%, transparent 50%),
      radial-gradient(ellipse at 80% 20%, rgba(50,50,50,0.3) 0%, transparent 40%),
      radial-gradient(ellipse at 40% 80%, rgba(70,70,70,0.3) 0%, transparent 45%),
      radial-gradient(ellipse at 70% 60%, rgba(55,55,55,0.35) 0%, transparent 50%),
      radial-gradient(ellipse at 30% 50%, rgba(45,45,45,0.3) 0%, transparent 55%),
      /* Base gradient */
      linear-gradient(to bottom, #1a1a1a 0%, #0d0d0d 100%);
  }

  /* Subtle animation for depth */
  .v3-hero::before {
    content: '';
    position: absolute;
    inset: 0;
    background: 
      radial-gradient(ellipse at 60% 40%, rgba(80,80,80,0.15) 0%, transparent 40%),
      radial-gradient(ellipse at 25% 60%, rgba(70,70,70,0.1) 0%, transparent 35%);
    opacity: 0.8;
    animation: v3-drift 20s ease-in-out infinite alternate;
    pointer-events: none;
  }

  @keyframes v3-drift {
    0% { transform: translateX(0) translateY(0); }
    100% { transform: translateX(10px) translateY(-5px); }
  }
</style>
