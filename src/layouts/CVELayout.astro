---
import BaseLayout from './BaseLayout.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
import PersonSchema from '../components/schemas/PersonSchema.astro';

export interface Props {
  cveId: string;
  title: string;
  description: string;
  cvssScore?: number;
  severity?: string;
  vulnerabilityType?: string;
  affectedSoftware?: string;
  affectedVersions?: string;
  disclosureDate?: string;
  fixedVersion?: string;
  canonical: string;
  ogImage?: string;
  keywords?: string[];
  noindex?: boolean;
}

const {
  cveId,
  title,
  description,
  cvssScore,
  severity = 'Medium',
  vulnerabilityType,
  affectedSoftware,
  affectedVersions,
  disclosureDate,
  fixedVersion,
  canonical,
  ogImage,
  keywords = [],
  noindex = false,
} = Astro.props;

const severityColors = {
  'Critical': 'var(--color-accent-red)',
  'High': '#ff8800',
  'Medium': 'var(--color-accent-yellow)',
  'Low': 'var(--color-accent-green)',
};

// TechArticle schema
const techArticleSchema = {
  "@context": "https://schema.org",
  "@type": "TechArticle",
  "headline": `${cveId}: ${title}`,
  "author": {
    "@type": "Person",
    "name": "Kai Aizen",
    "url": "https://snailsploit.com/about"
  },
  "datePublished": disclosureDate ? new Date(disclosureDate).toISOString() : undefined,
  "proficiencyLevel": "Expert",
  "dependencies": affectedSoftware,
  "mainEntityOfPage": canonical,
  "publisher": {
    "@type": "Person",
    "name": "Kai Aizen"
  }
};

// Breadcrumb schema
const breadcrumbSchema = {
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  "itemListElement": [
    { "@type": "ListItem", "position": 1, "name": "Home", "item": "https://snailsploit.com/" },
    { "@type": "ListItem", "position": 2, "name": "Security Research", "item": "https://snailsploit.com/security-research/" },
    { "@type": "ListItem", "position": 3, "name": "CVEs", "item": "https://snailsploit.com/security-research/cves/" },
    { "@type": "ListItem", "position": 4, "name": cveId }
  ]
};

// FAQPage schema - auto-generated from CVE details
const faqSchema = {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  "mainEntity": [
    {
      "@type": "Question",
      "name": `What is ${cveId}?`,
      "acceptedAnswer": {
        "@type": "Answer",
        "text": `${cveId} is a ${severity.toLowerCase()} severity vulnerability${vulnerabilityType ? ` (${vulnerabilityType})` : ''} affecting ${affectedSoftware || 'WordPress plugins'}. It was discovered by security researcher Kai Aizen (SnailSploit).`
      }
    },
    {
      "@type": "Question",
      "name": `How severe is ${cveId}?`,
      "acceptedAnswer": {
        "@type": "Answer",
        "text": `${cveId} is rated as ${severity} severity${cvssScore ? ` with a CVSS score of ${cvssScore}` : ''}. ${severity === 'Critical' || severity === 'High' ? 'Immediate patching is recommended.' : 'Users should update to the patched version when available.'}`
      }
    },
    {
      "@type": "Question",
      "name": `What software is affected by ${cveId}?`,
      "acceptedAnswer": {
        "@type": "Answer",
        "text": `${cveId} affects ${affectedSoftware || 'the affected WordPress plugin'}${affectedVersions ? ` in versions ${affectedVersions}` : ''}.${fixedVersion ? ` The vulnerability has been fixed in version ${fixedVersion}.` : ''}`
      }
    },
    {
      "@type": "Question",
      "name": `How do I fix ${cveId}?`,
      "acceptedAnswer": {
        "@type": "Answer",
        "text": fixedVersion
          ? `Update ${affectedSoftware || 'the affected plugin'} to version ${fixedVersion} or later to remediate ${cveId}.`
          : `Check the official NVD entry or vendor advisory for ${cveId} for the latest patching information. Monitor for updates from the plugin developer.`
      }
    }
  ]
};
---

<BaseLayout
  title={`${cveId} | ${title}`}
  description={description}
  canonical={canonical}
  ogType="article"
  ogImage={ogImage || `/images/og-cve-${cveId.toLowerCase().replace('cve-', '')}.png`}
  keywords={[...keywords, cveId, 'CVE', 'vulnerability']}
  schemaData={[techArticleSchema, breadcrumbSchema, faqSchema]}
  publishedDate={disclosureDate ? new Date(disclosureDate).toISOString() : undefined}
  noindex={noindex}
>
  <Navigation slot="header" />
  <PersonSchema />

  <article class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <!-- Breadcrumbs -->
    <nav class="mb-4 text-sm font-mono" style="color: var(--color-text-muted);">
      <a href="/" class="hover:text-[var(--color-accent-red)] transition-colors">Home</a>
      <span class="mx-2">/</span>
      <a href="/security-research/" class="hover:text-[var(--color-accent-red)] transition-colors">Security Research</a>
      <span class="mx-2">/</span>
      <a href="/security-research/cves/" class="hover:text-[var(--color-accent-red)] transition-colors">CVEs</a>
      <span class="mx-2">/</span>
      <span>{cveId}</span>
    </nav>

    <!-- Part of Hub Link -->
    <div class="mb-8 p-4 rounded-lg" style="background-color: var(--color-surface); border: 1px solid var(--color-border);">
      <span class="text-sm" style="color: var(--color-text-muted);">Part of </span>
      <a
        href="/security-research/cves/"
        class="text-sm font-mono font-semibold hover:underline"
        style="color: var(--color-accent-red);"
      >
        CVE Disclosures →
      </a>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
      <!-- Main Content -->
      <div class="lg:col-span-2">
        <header class="cve-header mb-10 relative">
          <div class="cve-glow"></div>

          <div class="severity-badge-container mb-4">
            <span
              class="severity-badge"
              style={`background: linear-gradient(135deg, ${severityColors[severity]}, ${severityColors[severity]}88); box-shadow: 0 0 20px ${severityColors[severity]}40;`}
            >
              <span class="severity-icon">⚠</span>
              {severity}
            </span>
          </div>

          <h1 class="cve-title">
            <span class="cve-id">{cveId}</span>
          </h1>

          <p class="cve-subtitle">
            {title}
          </p>

          <div class="cve-divider"></div>
        </header>

        <!-- Article Content -->
        <div class="prose prose-invert prose-lg max-w-none">
          <slot />
        </div>

        <!-- Credit -->
        <div class="mt-12 p-6 rounded-lg" style="background-color: var(--color-surface); border: 1px solid var(--color-border);">
          <p class="font-mono text-sm" style="color: var(--color-text-secondary);">
            <strong style="color: var(--color-text-primary);">Discovered by:</strong> Kai Aizen (SnailSploit)
          </p>
        </div>
      </div>

      <!-- Sidebar -->
      <aside class="lg:col-span-1">
        <div class="sticky top-8 space-y-6">
          <!-- Quick Facts -->
          <div class="p-6 rounded-lg" style="background-color: var(--color-surface); border: 1px solid var(--color-border);">
            <h3 class="font-mono text-lg font-bold mb-4" style="color: var(--color-accent-red);">
              Quick Facts
            </h3>

            <dl class="space-y-3 text-sm font-mono">
              {cvssScore && (
                <>
                  <dt style="color: var(--color-text-muted);">CVSS Score</dt>
                  <dd class="font-bold" style="color: var(--color-text-primary);">{cvssScore}</dd>
                </>
              )}

              <dt style="color: var(--color-text-muted);">Severity</dt>
              <dd class="font-bold" style={`color: ${severityColors[severity]};`}>{severity}</dd>

              {vulnerabilityType && (
                <>
                  <dt style="color: var(--color-text-muted);">Vulnerability Type</dt>
                  <dd style="color: var(--color-text-primary);">{vulnerabilityType}</dd>
                </>
              )}

              {affectedSoftware && (
                <>
                  <dt style="color: var(--color-text-muted);">Affected Software</dt>
                  <dd style="color: var(--color-text-primary);">{affectedSoftware}</dd>
                </>
              )}

              {affectedVersions && (
                <>
                  <dt style="color: var(--color-text-muted);">Affected Versions</dt>
                  <dd style="color: var(--color-text-primary);">{affectedVersions}</dd>
                </>
              )}

              {disclosureDate && (
                <>
                  <dt style="color: var(--color-text-muted);">Disclosure Date</dt>
                  <dd style="color: var(--color-text-primary);">{new Date(disclosureDate).toLocaleDateString()}</dd>
                </>
              )}

              {fixedVersion && (
                <>
                  <dt style="color: var(--color-text-muted);">Fixed Version</dt>
                  <dd style="color: var(--color-text-primary);">{fixedVersion}</dd>
                </>
              )}
            </dl>
          </div>

          <!-- External References -->
          <div class="p-6 rounded-lg" style="background-color: var(--color-surface); border: 1px solid var(--color-border);">
            <h3 class="font-mono text-lg font-bold mb-4" style="color: var(--color-accent-red);">
              References
            </h3>

            <ul class="space-y-2 text-sm font-mono">
              <li>
                <a
                  href={`https://nvd.nist.gov/vuln/detail/${cveId}`}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="hover:text-[var(--color-accent-red)] transition-colors"
                  style="color: var(--color-text-secondary);"
                >
                  NVD →
                </a>
              </li>
              <li>
                <a
                  href={`https://cve.mitre.org/cgi-bin/cvename.cgi?name=${cveId}`}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="hover:text-[var(--color-accent-red)] transition-colors"
                  style="color: var(--color-text-secondary);"
                >
                  MITRE →
                </a>
              </li>
              <li>
                <a
                  href="https://www.wordfence.com/threat-intel/vulnerabilities/researchers/kai-aizen"
                  target="_blank"
                  rel="noopener noreferrer"
                  class="hover:text-[var(--color-accent-red)] transition-colors"
                  style="color: var(--color-text-secondary);"
                >
                  Wordfence Profile →
                </a>
              </li>
            </ul>
          </div>
        </div>
      </aside>
    </div>
  </article>

  <Footer slot="footer" />
</BaseLayout>

<style is:global>
  /* ============================================
     CVE HEADER STYLES
     ============================================ */

  .cve-header {
    padding-bottom: 1.5rem;
  }

  .cve-glow {
    position: absolute;
    top: -30px;
    left: -50px;
    width: 300px;
    height: 150px;
    background: radial-gradient(ellipse, rgba(220, 38, 38, 0.15) 0%, transparent 70%);
    pointer-events: none;
    z-index: -1;
  }

  .severity-badge-container {
    display: inline-block;
  }

  .severity-badge {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 1rem;
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.875rem;
    font-weight: 700;
    color: #000000;
    border-radius: 8px;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .severity-icon {
    font-size: 1rem;
  }

  .cve-title {
    font-family: 'JetBrains Mono', monospace;
    font-size: clamp(2.5rem, 6vw, 3.5rem);
    font-weight: 700;
    line-height: 1.1;
    margin-bottom: 1rem;
  }

  .cve-id {
    background: linear-gradient(135deg, var(--color-accent-red) 0%, #ff6b6b 50%, var(--color-accent-red) 100%);
    background-size: 200% 200%;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    animation: cveGlow 4s ease-in-out infinite;
    text-shadow: 0 0 60px rgba(220, 38, 38, 0.4);
  }

  @keyframes cveGlow {
    0%, 100% { background-position: 0% 50%; }
    50% { background-position: 100% 50%; }
  }

  .cve-subtitle {
    font-family: 'Plus Jakarta Sans', sans-serif;
    font-size: 1.25rem;
    font-weight: 500;
    color: #a0a0a0;
    line-height: 1.5;
  }

  .cve-divider {
    height: 2px;
    background: linear-gradient(90deg, var(--color-accent-red), transparent);
    margin-top: 1.5rem;
    border-radius: 2px;
    box-shadow: 0 0 15px rgba(220, 38, 38, 0.3);
  }

  /* ============================================
     CVE Layout Prose Styles
     ============================================ */
  .prose {
    font-family: 'Source Serif 4', Georgia, serif;
    color: #e0e0e0;
    font-size: 1.1rem;
    line-height: 1.8;
  }

  .prose h2 {
    font-family: 'Plus Jakarta Sans', sans-serif;
    color: #ffffff;
    font-size: 1.75rem;
    font-weight: 700;
    margin-top: 2.5rem;
    margin-bottom: 1rem;
    padding-top: 1.5rem;
    border-top: 1px solid rgba(255, 255, 255, 0.08);
    position: relative;
  }

  .prose h2::before {
    content: '';
    position: absolute;
    top: -1px;
    left: 0;
    width: 50px;
    height: 3px;
    background: linear-gradient(90deg, var(--color-accent-red), transparent);
  }

  .prose section:first-child h2:first-child,
  .prose > h2:first-child {
    margin-top: 0;
    padding-top: 0;
    border-top: none;
  }

  .prose section:first-child h2:first-child::before,
  .prose > h2:first-child::before {
    display: none;
  }

  .prose h3 {
    font-family: 'Plus Jakarta Sans', sans-serif;
    color: #f0f0f0;
    font-size: 1.35rem;
    font-weight: 600;
    margin-top: 2rem;
    margin-bottom: 0.75rem;
  }

  .prose p {
    margin-bottom: 1.5em;
    line-height: 1.8;
  }

  .prose a {
    color: var(--color-accent-red);
    text-decoration: none;
    border-bottom: 1px solid rgba(220, 38, 38, 0.4);
    transition: all 0.2s ease;
  }

  .prose a:hover {
    color: #ff6b6b;
    border-bottom-color: #ff6b6b;
  }

  .prose strong {
    color: #ffffff;
    font-weight: 600;
  }

  .prose code {
    font-family: 'JetBrains Mono', monospace;
    background: rgba(220, 38, 38, 0.08);
    padding: 0.2em 0.5em;
    border-radius: 4px;
    font-size: 0.85em;
    color: #ff6b6b;
    border: 1px solid rgba(220, 38, 38, 0.15);
  }

  .prose pre {
    font-family: 'JetBrains Mono', monospace;
    background: #141414;
    padding: 1.25em;
    border-radius: 8px;
    overflow-x: auto;
    border: 1px solid rgba(255, 255, 255, 0.08);
    margin: 1.5rem 0;
    font-size: 0.85rem;
    line-height: 1.6;
    position: relative;
  }

  .prose pre::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 3px;
    background: linear-gradient(90deg, var(--color-accent-red), #ff6b6b, var(--color-accent-red));
    border-radius: 8px 8px 0 0;
  }

  .prose pre code {
    background: none;
    padding: 0;
    color: #d4d4d4;
    border: none;
    font-size: inherit;
  }

  .prose ul,
  .prose ol {
    margin: 1.5em 0;
    padding-left: 0;
  }

  .prose ul {
    list-style: none;
  }

  .prose ul li {
    position: relative;
    padding-left: 1.5em;
    margin-bottom: 0.75em;
    line-height: 1.7;
  }

  .prose ul li::before {
    content: '';
    position: absolute;
    left: 0;
    top: 0.6em;
    width: 6px;
    height: 6px;
    background: var(--color-accent-red);
    border-radius: 2px;
    transform: rotate(45deg);
  }

  .prose ol {
    list-style: none;
    counter-reset: list-counter;
  }

  .prose ol li {
    position: relative;
    padding-left: 2em;
    margin-bottom: 0.75em;
    line-height: 1.7;
    counter-increment: list-counter;
  }

  .prose ol li::before {
    content: counter(list-counter);
    position: absolute;
    left: 0;
    top: 0.1em;
    font-family: 'Plus Jakarta Sans', sans-serif;
    font-weight: 700;
    font-size: 0.8em;
    color: var(--color-accent-red);
    width: 1.5em;
    height: 1.5em;
    display: flex;
    align-items: center;
    justify-content: center;
    background: rgba(220, 38, 38, 0.1);
    border-radius: 50%;
  }

  .prose section {
    margin-bottom: 1.5rem;
  }

  .prose section h2:first-child {
    margin-top: 0;
  }
</style>
