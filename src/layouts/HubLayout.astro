---
import BaseLayout from './BaseLayout.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
import FAQPageSchema from '../components/schemas/FAQPageSchema.astro';
import BreadcrumbSchema from '../components/schemas/BreadcrumbSchema.astro';
import PersonSchema from '../components/schemas/PersonSchema.astro';

interface GlossaryItem {
  term: string;
  definition: string;
  link?: string;
}

interface FAQItem {
  question: string;
  answer: string;
}

interface StartHereItem {
  title: string;
  href: string;
  description: string;
}

interface ArticleItem {
  title: string;
  href: string;
  date: string;
  excerpt: string;
}

interface BreadcrumbItem {
  name: string;
  url: string;
}

export interface Props {
  title: string;
  description: string;
  canonical: string;
  ogImage?: string;
  keywords?: string[];
  heading: string;
  intro: string;
  glossary?: GlossaryItem[];
  faqs?: FAQItem[];
  startHere?: StartHereItem[];
  articles?: ArticleItem[];
  breadcrumbs?: BreadcrumbItem[];
}

const {
  title,
  description,
  canonical,
  ogImage,
  keywords = [],
  heading,
  intro,
  glossary = [],
  faqs = [],
  startHere = [],
  articles = [],
  breadcrumbs = [],
} = Astro.props;
---

<BaseLayout
  title={title}
  description={description}
  canonical={canonical}
  ogType="website"
  ogImage={ogImage || '/images/og-index.png'}
  keywords={keywords}
>
  <Navigation slot="header" />
  <PersonSchema />

  {breadcrumbs.length > 0 && <BreadcrumbSchema items={breadcrumbs} />}
  {faqs.length > 0 && <FAQPageSchema faqs={faqs} />}

  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <!-- Visual Breadcrumbs -->
    {breadcrumbs.length > 0 && (
      <nav class="mb-8 text-sm font-mono" style="color: var(--color-text-muted);">
        {breadcrumbs.map((crumb, index) => (
          <span>
            {index < breadcrumbs.length - 1 ? (
              <a href={crumb.url} class="hover:text-[var(--color-accent-red)] transition-colors">
                {crumb.name}
              </a>
            ) : (
              <span style="color: var(--color-text-secondary);">{crumb.name}</span>
            )}
            {index < breadcrumbs.length - 1 && <span class="mx-2">/</span>}
          </span>
        ))}
      </nav>
    )}

    <!-- Section 1: Hero/Intro -->
    <header class="hub-header mb-16 relative">
      <div class="hub-glow"></div>
      <h1 class="hub-title">
        <img src="/images/snailsploit-icon.png" alt="SnailSploit icon" class="hub-icon" />
        <span class="hub-title-text">{heading}</span>
      </h1>
      <div class="hub-intro">
        <p>{intro}</p>
      </div>
      <div class="hub-divider"></div>
    </header>

    <div class="max-w-5xl mx-auto">
      <!-- Start Here Section -->
      {startHere.length > 0 && (
        <section class="mb-16">
          <h2 class="text-3xl font-bold mb-8" style="color: var(--color-accent-red);">
            Start Here
          </h2>
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            {startHere.map(item => (
              <a
                href={item.href}
                class="group p-6 rounded-lg transition-all hover:scale-[1.02]"
                style="background-color: var(--color-surface); border: 1px solid var(--color-border);"
              >
                <h3 class="text-lg font-bold mb-2 group-hover:text-[var(--color-accent-red)] transition-colors" style="color: var(--color-text-primary);">
                  {item.title}
                </h3>
                <p class="text-sm" style="color: var(--color-text-secondary);">
                  {item.description}
                </p>
              </a>
            ))}
          </div>
        </section>
      )}

      <!-- Custom Content Slot -->
      <slot />

      <!-- Section 2: Key Concepts / Glossary -->
      {glossary.length > 0 && (
        <section class="mb-16 p-8 rounded-lg" style="background-color: var(--color-surface); border: 1px solid var(--color-border);">
          <h2 class="text-3xl font-bold mb-8" style="color: var(--color-accent-red);">
            Key Concepts
          </h2>
          <dl class="space-y-6">
            {glossary.map(item => (
              <div class="border-b pb-4" style="border-color: var(--color-border);">
                <dt class="text-lg font-bold mb-2" style="color: var(--color-text-primary);">
                  {item.term}
                </dt>
                <dd style="color: var(--color-text-secondary);">
                  {item.definition}
                  {item.link && (
                    <a href={item.link} class="ml-2 text-sm font-mono hover:underline" style="color: var(--color-accent-red);">
                      Learn more →
                    </a>
                  )}
                </dd>
              </div>
            ))}
          </dl>
        </section>
      )}

      <!-- Section 3: FAQ Accordion -->
      {faqs.length > 0 && (
        <section class="mb-16">
          <h2 class="text-3xl font-bold mb-8" style="color: var(--color-accent-red);">
            Frequently Asked Questions
          </h2>
          <div class="space-y-4">
            {faqs.map(faq => (
              <details class="group p-6 rounded-lg" style="background-color: var(--color-surface); border: 1px solid var(--color-border);">
                <summary class="cursor-pointer font-bold list-none flex justify-between items-center" style="color: var(--color-text-primary);">
                  {faq.question}
                  <span class="ml-4 transition-transform group-open:rotate-180" style="color: var(--color-accent-red);">
                    ▼
                  </span>
                </summary>
                <p class="mt-4 leading-relaxed" style="color: var(--color-text-secondary);">
                  {faq.answer}
                </p>
              </details>
            ))}
          </div>
        </section>
      )}

      <!-- Section 4: Article Feed -->
      {articles.length > 0 && (
        <section class="mb-16">
          <h2 class="text-3xl font-bold mb-8" style="color: var(--color-accent-red);">
            All Articles
          </h2>
          <div class="space-y-6">
            {articles.map(article => (
              <a
                href={article.href}
                class="group block p-6 rounded-lg transition-all hover:scale-[1.01]"
                style="background-color: var(--color-surface); border: 1px solid var(--color-border);"
              >
                <div class="flex flex-col md:flex-row md:items-center md:justify-between mb-2">
                  <h3 class="text-xl font-bold group-hover:text-[var(--color-accent-red)] transition-colors" style="color: var(--color-text-primary);">
                    {article.title}
                  </h3>
                  <time class="text-sm font-mono" style="color: var(--color-text-muted);">
                    {article.date}
                  </time>
                </div>
                <p class="text-sm" style="color: var(--color-text-secondary);">
                  {article.excerpt}
                </p>
              </a>
            ))}
          </div>
        </section>
      )}
    </div>
  </div>

  <Footer slot="footer" />
</BaseLayout>

<style>
  .hub-header {
    text-align: center;
    padding: 2rem 0;
  }

  .hub-glow {
    position: absolute;
    top: -100px;
    left: 50%;
    transform: translateX(-50%);
    width: 600px;
    height: 300px;
    background: radial-gradient(ellipse, rgba(220, 38, 38, 0.12) 0%, transparent 70%);
    pointer-events: none;
    z-index: -1;
  }

  .hub-title {
    font-family: 'Plus Jakarta Sans', sans-serif;
    font-size: clamp(3rem, 8vw, 5rem);
    font-weight: 800;
    line-height: 1.1;
    letter-spacing: -0.03em;
    margin-bottom: 1.5rem;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 1rem;
  }

  .hub-icon {
    width: clamp(3rem, 8vw, 5rem);
    height: clamp(3rem, 8vw, 5rem);
    object-fit: contain;
    filter: drop-shadow(0 0 20px rgba(220, 38, 38, 0.5));
    animation: iconPulse 3s ease-in-out infinite;
  }

  @keyframes iconPulse {
    0%, 100% {
      filter: drop-shadow(0 0 20px rgba(220, 38, 38, 0.5));
      transform: scale(1);
    }
    50% {
      filter: drop-shadow(0 0 30px rgba(220, 38, 38, 0.7));
      transform: scale(1.05);
    }
  }

  .hub-title-text {
    background: linear-gradient(135deg,
      var(--color-accent-red) 0%,
      #ff6b6b 25%,
      var(--color-accent-red) 50%,
      #ff6b6b 75%,
      var(--color-accent-red) 100%
    );
    background-size: 200% 200%;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    animation: hubTitleGlow 6s ease-in-out infinite;
    text-shadow: 0 0 80px rgba(220, 38, 38, 0.4);
  }

  @keyframes hubTitleGlow {
    0%, 100% { background-position: 0% 50%; }
    50% { background-position: 100% 50%; }
  }

  .hub-intro {
    max-width: 48rem;
    margin: 0 auto;
    font-family: 'Source Serif 4', Georgia, serif;
    font-size: 1.25rem;
    line-height: 1.85;
    color: #c8c8c8;
  }

  .hub-divider {
    width: 120px;
    height: 3px;
    margin: 2.5rem auto 0;
    background: linear-gradient(90deg, transparent, var(--color-accent-red), transparent);
    border-radius: 2px;
    box-shadow: 0 0 20px rgba(220, 38, 38, 0.4);
  }
</style>
