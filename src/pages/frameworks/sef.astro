---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Navigation from '../../components/Navigation.astro';
import Footer from '../../components/Footer.astro';
import FrameworkSchema from '../../components/schemas/FrameworkSchema.astro';
import V3DownloadGate from '../../components/V3DownloadGate';
import SEFTaxonomy from '../../components/SEFTaxonomy';
import SESACalculator from '../../components/SESACalculator';
import SEFPhases from '../../components/SEFPhases';
import {
  gapModel,
  psychologicalLevers,
  threatActorTiers,
  operationalModes,
  hltmIntegration,
  bookReference,
  stats
} from '../../data/sef-data';

const title = "SEF - Social Engineering Framework";
const description = "A systematic methodology for assessing and improving organizational resilience against social engineering attacks. Featuring the SESA scoring system, HLTM integration, and MITRE-aligned technique taxonomy.";
const canonical = "https://snailsploit.com/frameworks/sef/";

// Breadcrumb schema
const breadcrumbSchema = {
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  "itemListElement": [
    { "@type": "ListItem", "position": 1, "name": "Home", "item": "https://snailsploit.com" },
    { "@type": "ListItem", "position": 2, "name": "Frameworks", "item": "https://snailsploit.com/frameworks/" },
    { "@type": "ListItem", "position": 3, "name": "SEF" }
  ]
};
---

<BaseLayout
  title={title}
  description={description}
  canonical={canonical}
  ogType="article"
  keywords={['social engineering framework', 'SEF', 'SESA', 'human layer threat modeling', 'red team', 'phishing assessment']}
>
  <Navigation slot="header" />
  <script type="application/ld+json" set:html={JSON.stringify(breadcrumbSchema)} />
  <FrameworkSchema
    name="Social Engineering Framework (SEF)"
    description={description}
    url={canonical}
    version="1.0"
    datePublished="2025-01-23"
    dateModified="2025-01-24"
    keywords={['social engineering', 'SEF', 'SESA', 'human layer threat modeling', 'red team assessment', 'phishing simulation']}
  />

  <article class="bg-[#0a0a0a] min-h-screen">
    <!-- Hero Section -->
    <section class="relative py-20 overflow-hidden" style="background: linear-gradient(180deg, rgba(15, 23, 42, 0.3) 0%, rgba(10, 10, 10, 1) 100%);">
      <div class="max-w-6xl mx-auto px-6">
        <!-- Breadcrumb -->
        <nav class="mb-8 text-sm font-mono text-slate-500">
          <a href="/" class="hover:text-slate-300 transition-colors">Home</a>
          <span class="mx-2">/</span>
          <a href="/frameworks/" class="hover:text-slate-300 transition-colors">Frameworks</a>
          <span class="mx-2">/</span>
          <span class="text-slate-400">SEF</span>
        </nav>

        <div class="flex items-start gap-4 mb-6">
          <span class="inline-block px-3 py-1 text-xs font-mono rounded" style="background: rgba(148, 163, 184, 0.1); color: #94a3b8; border: 1px solid rgba(148, 163, 184, 0.2);">
            Framework v1.0
          </span>
          <span class="inline-block px-3 py-1 text-xs font-mono rounded" style="background: rgba(148, 163, 184, 0.05); color: #64748b;">
            Human Security
          </span>
        </div>

        <h1 class="text-4xl md:text-6xl font-bold mb-6 text-white leading-tight">
          Social Engineering<br/>
          <span class="text-slate-400">Framework</span>
        </h1>

        <p class="text-xl text-gray-400 max-w-3xl mb-8 leading-relaxed">
          A systematic methodology for assessing organizational resilience against social engineering attacks through structured threat modeling, quantitative scoring, and evidence-based remediation.
        </p>

        <!-- Stats Bar -->
        <div class="grid grid-cols-2 md:grid-cols-4 lg:grid-cols-6 gap-4">
          <div class="p-4 rounded-lg text-center" style="background: rgba(148, 163, 184, 0.05); border: 1px solid rgba(148, 163, 184, 0.1);">
            <div class="text-2xl font-bold text-slate-400">{stats.techniques}</div>
            <div class="text-xs text-gray-500">Techniques</div>
          </div>
          <div class="p-4 rounded-lg text-center" style="background: rgba(148, 163, 184, 0.05); border: 1px solid rgba(148, 163, 184, 0.1);">
            <div class="text-2xl font-bold text-slate-400">{stats.phases}</div>
            <div class="text-xs text-gray-500">Phases</div>
          </div>
          <div class="p-4 rounded-lg text-center" style="background: rgba(148, 163, 184, 0.05); border: 1px solid rgba(148, 163, 184, 0.1);">
            <div class="text-2xl font-bold text-slate-400">{stats.sesaDimensions}</div>
            <div class="text-xs text-gray-500">SESA Dimensions</div>
          </div>
          <div class="p-4 rounded-lg text-center" style="background: rgba(148, 163, 184, 0.05); border: 1px solid rgba(148, 163, 184, 0.1);">
            <div class="text-2xl font-bold text-slate-400">{stats.categories}</div>
            <div class="text-xs text-gray-500">Categories</div>
          </div>
          <div class="p-4 rounded-lg text-center" style="background: rgba(148, 163, 184, 0.05); border: 1px solid rgba(148, 163, 184, 0.1);">
            <div class="text-2xl font-bold text-slate-400">{stats.psychologicalLevers}</div>
            <div class="text-xs text-gray-500">Psych Levers</div>
          </div>
          <div class="p-4 rounded-lg text-center" style="background: rgba(148, 163, 184, 0.05); border: 1px solid rgba(148, 163, 184, 0.1);">
            <div class="text-2xl font-bold text-slate-400">{stats.threatTiers}</div>
            <div class="text-xs text-gray-500">Threat Tiers</div>
          </div>
        </div>
      </div>
    </section>

    <!-- Gap Model Section -->
    <section class="py-16" style="background: rgba(15, 23, 42, 0.2);">
      <div class="max-w-6xl mx-auto px-6">
        <div class="text-center mb-12">
          <span class="text-sm font-mono text-slate-500 uppercase tracking-wider">Core Concept</span>
          <h2 class="text-3xl font-bold text-white mt-2">{gapModel.title}</h2>
          <p class="text-gray-400 mt-4 max-w-2xl mx-auto">{gapModel.description}</p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">
          {gapModel.gaps.map((gap) => (
            <div
              class="p-6 rounded-xl"
              style={`background: ${gap.color}15; border: 1px solid ${gap.color}30;`}
            >
              <h3 class="text-lg font-semibold text-white mb-3">{gap.name}</h3>
              <p class="text-sm text-gray-400 mb-4">{gap.description}</p>
              <div class="space-y-1">
                {gap.indicators.map((indicator) => (
                  <div class="text-xs text-slate-500 flex items-center gap-2">
                    <span style={`color: ${gap.color}`}>•</span>
                    {indicator}
                  </div>
                ))}
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Framework Phases -->
    <section class="py-16">
      <div class="max-w-6xl mx-auto px-6">
        <div class="text-center mb-12">
          <span class="text-sm font-mono text-slate-500 uppercase tracking-wider">Methodology</span>
          <h2 class="text-3xl font-bold text-white mt-2">Framework Phases</h2>
          <p class="text-gray-400 mt-4 max-w-2xl mx-auto">
            Seven structured phases from initial threat modeling through remediation and continuous improvement.
          </p>
        </div>

        <SEFPhases client:load />
      </div>
    </section>

    <!-- SESA Calculator -->
    <section class="py-16" style="background: rgba(15, 23, 42, 0.2);">
      <div class="max-w-6xl mx-auto px-6">
        <div class="text-center mb-12">
          <span class="text-sm font-mono text-slate-500 uppercase tracking-wider">Assessment Tool</span>
          <h2 class="text-3xl font-bold text-white mt-2">SESA Scoring System</h2>
          <p class="text-gray-400 mt-4 max-w-2xl mx-auto">
            Social Engineering Susceptibility Assessment (SESA) provides quantitative measurement across six key dimensions of organizational resilience.
          </p>
        </div>

        <SESACalculator client:load />
      </div>
    </section>

    <!-- Technique Taxonomy -->
    <section class="py-16">
      <div class="max-w-6xl mx-auto px-6">
        <div class="text-center mb-12">
          <span class="text-sm font-mono text-slate-500 uppercase tracking-wider">Attack Library</span>
          <h2 class="text-3xl font-bold text-white mt-2">Technique Taxonomy</h2>
          <p class="text-gray-400 mt-4 max-w-2xl mx-auto">
            MITRE-aligned categorization of social engineering techniques with psychological levers, indicators, and mitigations.
          </p>
        </div>

        <SEFTaxonomy client:load />
      </div>
    </section>

    <!-- Psychological Levers -->
    <section class="py-16" style="background: rgba(15, 23, 42, 0.2);">
      <div class="max-w-6xl mx-auto px-6">
        <div class="text-center mb-12">
          <span class="text-sm font-mono text-slate-500 uppercase tracking-wider">Human Factors</span>
          <h2 class="text-3xl font-bold text-white mt-2">Psychological Levers</h2>
          <p class="text-gray-400 mt-4 max-w-2xl mx-auto">
            Understanding the cognitive biases and psychological principles that social engineers exploit.
          </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">
          {psychologicalLevers.map((lever) => (
            <div class="p-6 rounded-xl" style="background: rgba(30, 30, 30, 0.8); border: 1px solid rgba(148, 163, 184, 0.15);">
              <h3 class="text-lg font-semibold text-slate-300 mb-2">{lever.name}</h3>
              <p class="text-sm text-gray-500 mb-4">{lever.description}</p>
              <div class="space-y-3">
                <div>
                  <span class="text-xs text-red-400 uppercase tracking-wide">Exploitation</span>
                  <p class="text-xs text-gray-400 mt-1">{lever.exploitation}</p>
                </div>
                <div>
                  <span class="text-xs text-green-400 uppercase tracking-wide">Defense</span>
                  <p class="text-xs text-gray-400 mt-1">{lever.defense}</p>
                </div>
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Threat Actor Tiers -->
    <section class="py-16">
      <div class="max-w-6xl mx-auto px-6">
        <div class="text-center mb-12">
          <span class="text-sm font-mono text-slate-500 uppercase tracking-wider">Adversary Classification</span>
          <h2 class="text-3xl font-bold text-white mt-2">Threat Actor Tiers</h2>
          <p class="text-gray-400 mt-4 max-w-2xl mx-auto">
            Understanding adversary capabilities helps calibrate defensive investments and assessment rigor.
          </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">
          {threatActorTiers.map((tier) => (
            <div
              class="p-6 rounded-xl relative overflow-hidden"
              style="background: rgba(30, 30, 30, 0.8); border: 1px solid rgba(148, 163, 184, 0.15);"
            >
              <div class="absolute top-4 right-4 w-10 h-10 rounded-full flex items-center justify-center text-lg font-bold" style="background: rgba(148, 163, 184, 0.1); color: #94a3b8;">
                {tier.tier}
              </div>
              <h3 class="text-lg font-semibold text-white mb-2">{tier.name}</h3>
              <p class="text-sm text-gray-500 mb-4">{tier.description}</p>
              <div class="space-y-2 text-xs">
                <div>
                  <span class="text-slate-500">Resources:</span>
                  <span class="text-gray-400 ml-2">{tier.resources}</span>
                </div>
                <div>
                  <span class="text-slate-500">Sophistication:</span>
                  <span class="text-gray-400 ml-2">{tier.sophistication}</span>
                </div>
              </div>
              <div class="mt-4 flex flex-wrap gap-1">
                {tier.examples.map((example) => (
                  <span class="px-2 py-0.5 rounded text-xs" style="background: rgba(148, 163, 184, 0.1); color: #64748b;">
                    {example}
                  </span>
                ))}
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Operational Modes -->
    <section class="py-16" style="background: rgba(15, 23, 42, 0.2);">
      <div class="max-w-6xl mx-auto px-6">
        <div class="text-center mb-12">
          <span class="text-sm font-mono text-slate-500 uppercase tracking-wider">Engagement Types</span>
          <h2 class="text-3xl font-bold text-white mt-2">Operational Modes</h2>
          <p class="text-gray-400 mt-4 max-w-2xl mx-auto">
            SEF supports two distinct operational modes based on organizational objectives and risk tolerance.
          </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          {operationalModes.map((mode) => (
            <div
              class="p-8 rounded-xl"
              style={`background: rgba(30, 30, 30, 0.8); border: 1px solid ${mode.riskLevel === 'Low' ? 'rgba(34, 197, 94, 0.3)' : 'rgba(239, 68, 68, 0.3)'};`}
            >
              <div class="flex items-center justify-between mb-4">
                <h3 class="text-xl font-semibold text-white">{mode.name}</h3>
                <span
                  class="px-3 py-1 rounded-full text-xs font-medium"
                  style={`background: ${mode.riskLevel === 'Low' ? 'rgba(34, 197, 94, 0.15)' : 'rgba(239, 68, 68, 0.15)'}; color: ${mode.riskLevel === 'Low' ? '#22c55e' : '#ef4444'};`}
                >
                  {mode.riskLevel} Risk
                </span>
              </div>
              <p class="text-gray-400 mb-6">{mode.description}</p>

              <div class="grid grid-cols-2 gap-4">
                <div>
                  <h4 class="text-sm font-medium text-slate-500 mb-2">Scope</h4>
                  <ul class="space-y-1">
                    {mode.scope.map((item) => (
                      <li class="text-sm text-gray-400 flex items-center gap-2">
                        <span class="text-slate-600">•</span>
                        {item}
                      </li>
                    ))}
                  </ul>
                </div>
                <div>
                  <h4 class="text-sm font-medium text-slate-500 mb-2">Deliverables</h4>
                  <ul class="space-y-1">
                    {mode.deliverables.map((item) => (
                      <li class="text-sm text-gray-400 flex items-center gap-2">
                        <span class="text-green-600">→</span>
                        {item}
                      </li>
                    ))}
                  </ul>
                </div>
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- HLTM Integration -->
    <section class="py-16">
      <div class="max-w-6xl mx-auto px-6">
        <div class="text-center mb-12">
          <span class="text-sm font-mono text-slate-500 uppercase tracking-wider">Foundation</span>
          <h2 class="text-3xl font-bold text-white mt-2">{hltmIntegration.title}</h2>
          <p class="text-gray-400 mt-4 max-w-2xl mx-auto">{hltmIntegration.description}</p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">
          {hltmIntegration.components.map((component, i) => (
            <div class="p-6 rounded-xl" style="background: rgba(30, 30, 30, 0.8); border: 1px solid rgba(148, 163, 184, 0.15);">
              <div class="flex items-center gap-3 mb-4">
                <div class="w-8 h-8 rounded-full flex items-center justify-center text-sm font-bold" style="background: rgba(148, 163, 184, 0.2); color: #94a3b8;">
                  {i + 1}
                </div>
                <h3 class="font-semibold text-white">{component.name}</h3>
              </div>
              <p class="text-sm text-gray-500 mb-4">{component.description}</p>
              <div class="space-y-1">
                {component.outputs.map((output) => (
                  <div class="text-xs text-slate-500 flex items-center gap-2">
                    <span class="text-slate-600">→</span>
                    {output}
                  </div>
                ))}
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Book Reference -->
    <section class="py-16" style="background: rgba(15, 23, 42, 0.3);">
      <div class="max-w-4xl mx-auto px-6">
        <div class="p-8 rounded-xl text-center" style="background: rgba(20, 20, 20, 0.9); border: 1px solid rgba(148, 163, 184, 0.2);">
          <span class="inline-block px-3 py-1 text-xs font-mono rounded mb-4" style="background: rgba(148, 163, 184, 0.1); color: #64748b;">
            {bookReference.status}
          </span>
          <h3 class="text-2xl font-bold text-white mb-2">{bookReference.title}</h3>
          <p class="text-slate-400 italic mb-4">{bookReference.subtitle}</p>
          <p class="text-gray-500 mb-8 max-w-xl mx-auto">{bookReference.description}</p>

          <div class="grid grid-cols-2 md:grid-cols-4 gap-2 text-left">
            {bookReference.chapters.map((chapter, i) => (
              <div class="p-3 rounded-lg text-xs" style="background: rgba(148, 163, 184, 0.05);">
                <span class="text-slate-600 font-mono mr-2">{String(i + 1).padStart(2, '0')}</span>
                <span class="text-gray-400">{chapter}</span>
              </div>
            ))}
          </div>
        </div>
      </div>
    </section>

    <!-- Download Gate -->
    <section class="py-16">
      <div class="max-w-4xl mx-auto px-6">
        <V3DownloadGate
          client:load
          title="Download the Complete SEF (PDF)"
          description="Get the full tactical blueprint including threat matrices, SESA worksheets, assessment checklists, and implementation guides."
          file="/downloads/SEF-Kai-Aizen.pdf"
          buttonText="Download Free PDF"
          features={[
            "Complete SESA scoring worksheets",
            "Technique taxonomy with mitigations",
            "Phase-by-phase implementation guide",
            "Threat actor response matrix"
          ]}
        />
      </div>
    </section>

    <!-- Author & Related -->
    <section class="py-16" style="background: rgba(15, 23, 42, 0.2);">
      <div class="max-w-4xl mx-auto px-6">
        <div class="grid md:grid-cols-2 gap-6">
          <!-- Author Box -->
          <div class="p-6 rounded-xl" style="background: rgba(30, 30, 30, 0.8); border: 1px solid rgba(148, 163, 184, 0.15);">
            <h3 class="font-mono text-lg font-bold mb-3 text-slate-400">About the Author</h3>
            <p class="text-sm mb-4 text-gray-400">
              <strong class="text-white">Kai Aizen</strong> is a GenAI Security Researcher specializing in adversarial AI, social engineering, and human-layer security. He is the creator of the AATMF and SEF frameworks and author of <em>Adversarial Minds</em>.
            </p>
            <div class="flex gap-4">
              <a href="/about/" class="text-sm font-mono hover:text-slate-300 transition-colors text-slate-500">About Kai →</a>
            </div>
          </div>

          <!-- Related Frameworks -->
          <div class="p-6 rounded-xl" style="background: rgba(30, 30, 30, 0.8); border: 1px solid rgba(148, 163, 184, 0.15);">
            <h3 class="font-mono text-lg font-bold mb-4 text-slate-400">Related Frameworks</h3>
            <div class="space-y-3">
              <a href="/frameworks/aatmf/" class="group flex items-center gap-3 p-3 rounded-lg transition-all hover:bg-white/5" style="border: 1px solid rgba(255,255,255,0.05);">
                <span class="px-2 py-0.5 text-xs font-mono rounded" style="background: rgba(220, 38, 38, 0.1); color: #dc2626;">AI</span>
                <span class="text-sm font-mono group-hover:text-white transition-colors text-gray-400">AATMF - Adversarial AI Threat Modeling</span>
              </a>
              <a href="/frameworks/prompt/" class="group flex items-center gap-3 p-3 rounded-lg transition-all hover:bg-white/5" style="border: 1px solid rgba(255,255,255,0.05);">
                <span class="px-2 py-0.5 text-xs font-mono rounded" style="background: rgba(59, 130, 246, 0.1); color: #3b82f6;">LLM</span>
                <span class="text-sm font-mono group-hover:text-white transition-colors text-gray-400">P.R.O.M.P.T. - Prompt Engineering</span>
              </a>
            </div>
          </div>
        </div>
      </div>
    </section>
  </article>

  <Footer slot="footer" />
</BaseLayout>
