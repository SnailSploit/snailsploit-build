---
import BaseLayout from '../layouts/BaseLayout.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
import WebSiteSchema from '../components/schemas/WebSiteSchema.astro';
import PersonSchema from '../components/schemas/PersonSchema.astro';

const featuredCards = [
  {
    label: 'Framework',
    title: 'AATMF — Adversarial AI Threat Modeling',
    description: '14 tactics, 40+ techniques for AI red teaming',
    url: '/frameworks/aatmf/'
  },
  {
    label: 'Research',
    title: 'LLM Jailbreaking & Prompt Injection',
    description: 'Original research on bypassing AI guardrails',
    url: '/ai-security/'
  },
  {
    label: 'Book',
    title: 'Adversarial Minds',
    description: 'The psychology of social engineering',
    url: '/adversarial-minds/'
  }
];
---

<BaseLayout
  title="Kai Aizen (SnailSploit) | GenAI Security Researcher"
  description="Security research on AI vulnerabilities, LLM jailbreaking, and adversarial AI. Creator of AATMF framework. 5 CVEs discovered. Published in Hakin9 Magazine."
  canonical="https://snailsploit.com/"
  ogImage="/images/og-default.jpg"
  keywords={[
    'AI security',
    'LLM jailbreaking',
    'adversarial AI',
    'GenAI security researcher',
    'AATMF'
  ]}
>
  <Navigation slot="header" />
  <WebSiteSchema />
  <PersonSchema />

  <main class="homepage">
    <!-- Hero Section -->
    <section class="hero">
      <div class="hero-bg"></div>
      <div class="hero-content">
        <div class="status-wrapper">
          <span class="status-dot"></span>
          <p class="status-line">Currently researching AI agent security</p>
        </div>

        <h1 class="headline">
          <span class="line1">The <span class="accent">Human</span> Link in</span>
          <span class="line2">Adversarial Security</span>
        </h1>

        <p class="subtitle">
          Bridging technical exploitation and psychological manipulation<br class="hide-mobile" /> through adversarial AI research.
        </p>

        <div class="meta-info">
          <p class="credentials">
            <span class="cred-item">Creator of AATMF</span>
            <span class="sep">•</span>
            <span class="cred-item">Author of Adversarial Minds</span>
            <span class="sep">•</span>
            <span class="cred-item">5 CVEs</span>
          </p>
          <p class="byline">Kai Aizen — SnailSploit / The Jailbreak Chef</p>
        </div>

        <div class="button-row">
          <a href="/about/" class="btn btn-primary">
            <span>About Me</span>
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M5 12h14M12 5l7 7-7 7"/>
            </svg>
          </a>
          <a href="/frameworks/" class="btn btn-secondary">
            <span>View Frameworks</span>
          </a>
        </div>
      </div>

      <div class="scroll-indicator">
        <span>Scroll</span>
        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M12 5v14M5 12l7 7 7-7"/>
        </svg>
      </div>
    </section>

    <!-- Featured Section -->
    <section class="featured">
      <div class="section-header-wrapper">
        <div class="section-line"></div>
        <h2 class="section-header">Recent Work</h2>
        <div class="section-line"></div>
      </div>

      <div class="cards-grid">
        {featuredCards.map((card, index) => (
          <a href={card.url} class="card" style={`animation-delay: ${index * 0.1}s`}>
            <div class="card-inner">
              <span class="card-label">{card.label}</span>
              <span class="card-title">{card.title}</span>
              <span class="card-description">{card.description}</span>
              <span class="card-arrow">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M7 17L17 7M17 7H7M17 7v10"/>
                </svg>
              </span>
            </div>
          </a>
        ))}
      </div>
    </section>
  </main>

  <Footer slot="footer" />
</BaseLayout>

<style>
  .homepage {
    background: #050505;
    min-height: 100vh;
  }

  /* Hero Section */
  .hero {
    min-height: calc(100vh - 80px);
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 2rem 4rem;
    position: relative;
    overflow: hidden;
  }

  .hero-bg {
    position: absolute;
    inset: 0;
    background:
      radial-gradient(ellipse 80% 50% at 50% -20%, rgba(220, 38, 38, 0.15), transparent),
      radial-gradient(ellipse 60% 40% at 50% 120%, rgba(220, 38, 38, 0.08), transparent);
    pointer-events: none;
  }

  .hero-content {
    max-width: 900px;
    text-align: center;
    position: relative;
    z-index: 1;
    animation: fadeInUp 0.8s ease-out;
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .status-wrapper {
    display: inline-flex;
    align-items: center;
    gap: 0.6rem;
    padding: 0.6rem 1.25rem;
    background: rgba(220, 38, 38, 0.1);
    border: 1px solid rgba(220, 38, 38, 0.2);
    border-radius: 100px;
    margin-bottom: 3rem;
  }

  .status-dot {
    width: 6px;
    height: 6px;
    background: #dc2626;
    border-radius: 50%;
    animation: pulse 2s ease-in-out infinite;
  }

  @keyframes pulse {
    0%, 100% { opacity: 1; }
    50% { opacity: 0.4; }
  }

  .status-line {
    font-family: 'IBM Plex Mono', monospace;
    font-size: 0.85rem;
    color: #888888;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    margin: 0;
  }

  .headline {
    font-family: Inter, system-ui, -apple-system, sans-serif;
    font-size: clamp(3.5rem, 8vw, 6rem);
    font-weight: 700;
    line-height: 1.05;
    margin-bottom: 2rem;
    letter-spacing: -0.03em;
  }

  .headline .line1 {
    display: block;
    color: #ffffff;
  }

  .headline .line2 {
    display: block;
    color: #666666;
  }

  .headline .accent {
    color: #dc2626;
    position: relative;
  }

  .subtitle {
    font-family: system-ui, -apple-system, sans-serif;
    font-size: 1.5rem;
    color: #777777;
    line-height: 1.6;
    max-width: 700px;
    margin: 0 auto 2.5rem;
  }

  .meta-info {
    margin-bottom: 3rem;
  }

  .credentials {
    font-family: 'IBM Plex Mono', monospace;
    font-size: 0.95rem;
    color: #999999;
    margin-bottom: 0.5rem;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-wrap: wrap;
    gap: 0.6rem;
  }

  .cred-item {
    white-space: nowrap;
  }

  .credentials .sep {
    color: #333333;
  }

  .byline {
    font-family: 'IBM Plex Mono', monospace;
    font-size: 0.9rem;
    color: #555555;
    margin: 0;
  }

  .button-row {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
  }

  .btn {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 1rem 1.75rem;
    border-radius: 6px;
    font-family: system-ui, -apple-system, sans-serif;
    font-size: 0.9rem;
    font-weight: 500;
    text-decoration: none;
    transition: all 0.25s ease;
  }

  .btn svg {
    transition: transform 0.25s ease;
  }

  .btn-primary {
    background: #dc2626;
    color: #ffffff;
    border: none;
    box-shadow: 0 4px 20px rgba(220, 38, 38, 0.3);
  }

  .btn-primary:hover {
    background: #ef4444;
    box-shadow: 0 6px 30px rgba(220, 38, 38, 0.4);
    transform: translateY(-2px);
  }

  .btn-primary:hover svg {
    transform: translateX(3px);
  }

  .btn-secondary {
    background: rgba(255, 255, 255, 0.03);
    color: #999999;
    border: 1px solid #222222;
  }

  .btn-secondary:hover {
    border-color: #444444;
    color: #ffffff;
    background: rgba(255, 255, 255, 0.05);
  }

  .scroll-indicator {
    position: absolute;
    bottom: 2rem;
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.5rem;
    color: #333333;
    font-family: 'IBM Plex Mono', monospace;
    font-size: 0.7rem;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    animation: bounce 2s ease-in-out infinite;
  }

  @keyframes bounce {
    0%, 100% { transform: translateX(-50%) translateY(0); }
    50% { transform: translateX(-50%) translateY(5px); }
  }

  .hide-mobile {
    display: inline;
  }

  /* Featured Section */
  .featured {
    max-width: 1100px;
    margin: 0 auto;
    padding: 6rem 2rem 8rem;
  }

  .section-header-wrapper {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 1.5rem;
    margin-bottom: 3rem;
  }

  .section-line {
    flex: 1;
    max-width: 100px;
    height: 1px;
    background: linear-gradient(90deg, transparent, #222222, transparent);
  }

  .section-header {
    font-family: 'IBM Plex Mono', monospace;
    font-size: 0.75rem;
    text-transform: uppercase;
    letter-spacing: 0.2em;
    color: #555555;
    margin: 0;
    white-space: nowrap;
  }

  .cards-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 1.5rem;
  }

  .card {
    display: block;
    background: linear-gradient(135deg, #0d0d0d 0%, #111111 100%);
    border: 1px solid #1a1a1a;
    border-radius: 8px;
    text-decoration: none;
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
    animation: fadeInUp 0.6s ease-out backwards;
  }

  .card::before {
    content: '';
    position: absolute;
    inset: 0;
    background: linear-gradient(135deg, rgba(220, 38, 38, 0.1) 0%, transparent 50%);
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .card:hover {
    border-color: #dc2626;
    transform: translateY(-4px);
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.4), 0 0 0 1px rgba(220, 38, 38, 0.1);
  }

  .card:hover::before {
    opacity: 1;
  }

  .card-inner {
    padding: 2rem;
    position: relative;
    z-index: 1;
  }

  .card-label {
    display: inline-block;
    font-family: 'IBM Plex Mono', monospace;
    font-size: 0.7rem;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: #dc2626;
    margin-bottom: 1rem;
    padding: 0.25rem 0.5rem;
    background: rgba(220, 38, 38, 0.1);
    border-radius: 3px;
  }

  .card-title {
    display: block;
    font-family: system-ui, -apple-system, sans-serif;
    font-size: 1.125rem;
    font-weight: 600;
    color: #ffffff;
    margin-bottom: 0.75rem;
    line-height: 1.4;
  }

  .card-description {
    display: block;
    font-family: system-ui, -apple-system, sans-serif;
    font-size: 0.875rem;
    color: #666666;
    line-height: 1.5;
  }

  .card-arrow {
    position: absolute;
    top: 1.5rem;
    right: 1.5rem;
    color: #333333;
    transition: all 0.3s ease;
  }

  .card:hover .card-arrow {
    color: #dc2626;
    transform: translate(3px, -3px);
  }

  /* Mobile */
  @media (max-width: 768px) {
    .hero {
      padding: 2rem 1.5rem;
      min-height: calc(100vh - 60px);
    }

    .headline {
      font-size: clamp(2rem, 8vw, 3rem);
    }

    .subtitle {
      font-size: 1.1rem;
    }

    .hide-mobile {
      display: none;
    }

    .cards-grid {
      grid-template-columns: 1fr;
    }

    .button-row {
      flex-direction: column;
      align-items: center;
    }

    .btn {
      width: 100%;
      max-width: 280px;
      justify-content: center;
    }

    .scroll-indicator {
      display: none;
    }

    .section-line {
      max-width: 50px;
    }

    .credentials {
      flex-direction: column;
      gap: 0.25rem;
    }

    .credentials .sep {
      display: none;
    }
  }
</style>
