---
import BaseLayout from '../layouts/BaseLayout.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
import WebSiteSchema from '../components/schemas/WebSiteSchema.astro';
import PersonSchema from '../components/schemas/PersonSchema.astro';

const featuredCards = [
  {
    label: 'Framework',
    title: 'AATMF — Adversarial AI Threat Modeling',
    url: '/frameworks/aatmf/'
  },
  {
    label: 'Research',
    title: 'LLM Jailbreaking & Prompt Injection',
    url: '/ai-security/'
  },
  {
    label: 'Book',
    title: 'Adversarial Minds — Social Engineering Psychology',
    url: '/adversarial-minds/'
  }
];
---

<BaseLayout
  title="Kai Aizen (SnailSploit) | GenAI Security Researcher"
  description="Security research on AI vulnerabilities, LLM jailbreaking, and adversarial AI. Creator of AATMF framework. 5 CVEs discovered. Published in Hakin9 Magazine."
  canonical="https://snailsploit.com/"
  ogImage="/images/og-default.jpg"
  keywords={[
    'AI security',
    'LLM jailbreaking',
    'adversarial AI',
    'GenAI security researcher',
    'AATMF'
  ]}
>
  <Navigation slot="header" />
  <WebSiteSchema />
  <PersonSchema />

  <main class="homepage">
    <!-- Hero Section -->
    <section class="hero">
      <div class="hero-content">
        <p class="status-line">Currently researching AI agent security</p>

        <h1 class="headline">
          <span class="line1">The <span class="accent">Human</span> Link in</span>
          <span class="line2">Adversarial Security</span>
        </h1>

        <p class="subtitle">
          Bridging technical exploitation and psychological manipulation through adversarial AI research.
        </p>

        <p class="credentials">
          Creator of AATMF <span class="sep">•</span> Author of Adversarial Minds <span class="sep">•</span> 5 CVEs
        </p>

        <p class="byline">
          Kai Aizen — SnailSploit / The Jailbreak Chef
        </p>

        <div class="button-row">
          <a href="/about/" class="btn btn-primary">About Me</a>
          <a href="/frameworks/" class="btn btn-secondary">View Frameworks</a>
        </div>
      </div>
    </section>

    <!-- Featured Section -->
    <section class="featured">
      <h2 class="section-header">Recent Work</h2>

      <div class="cards-grid">
        {featuredCards.map(card => (
          <a href={card.url} class="card">
            <span class="card-label">{card.label}</span>
            <span class="card-title">{card.title}</span>
          </a>
        ))}
      </div>
    </section>
  </main>

  <Footer slot="footer" />
</BaseLayout>

<style>
  .homepage {
    background: #0a0a0a;
    min-height: 100vh;
  }

  /* Hero Section */
  .hero {
    min-height: calc(100vh - 80px);
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 2rem 4rem;
  }

  .hero-content {
    max-width: 900px;
    text-align: center;
  }

  .status-line {
    font-family: 'IBM Plex Mono', monospace;
    font-size: 0.75rem;
    color: #555555;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    margin-bottom: 2rem;
  }

  .headline {
    font-family: Inter, system-ui, -apple-system, sans-serif;
    font-size: clamp(2.5rem, 5vw, 3.5rem);
    font-weight: 600;
    line-height: 1.15;
    margin-bottom: 1.5rem;
  }

  .headline .line1 {
    display: block;
    color: #ffffff;
  }

  .headline .line2 {
    display: block;
    color: #888888;
  }

  .headline .accent {
    color: #dc2626;
  }

  .subtitle {
    font-family: system-ui, -apple-system, sans-serif;
    font-size: 1.125rem;
    color: #888888;
    line-height: 1.7;
    max-width: 600px;
    margin: 0 auto 1.5rem;
  }

  .credentials {
    font-family: 'IBM Plex Mono', monospace;
    font-size: 0.85rem;
    color: #999999;
    margin-bottom: 0.75rem;
  }

  .credentials .sep {
    color: #555555;
    margin: 0 0.25em;
  }

  .byline {
    font-family: 'IBM Plex Mono', monospace;
    font-size: 0.8rem;
    color: #666666;
    margin-bottom: 2.5rem;
  }

  .button-row {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
  }

  .btn {
    display: inline-block;
    padding: 0.875rem 1.75rem;
    border-radius: 4px;
    font-family: system-ui, -apple-system, sans-serif;
    font-size: 0.9rem;
    font-weight: 500;
    text-decoration: none;
    transition: all 0.2s ease;
  }

  .btn-primary {
    background: #dc2626;
    color: #ffffff;
    border: none;
  }

  .btn-primary:hover {
    background: #ef4444;
  }

  .btn-secondary {
    background: transparent;
    color: #888888;
    border: 1px solid #333333;
  }

  .btn-secondary:hover {
    border-color: #888888;
    color: #ffffff;
  }

  /* Featured Section */
  .featured {
    max-width: 1100px;
    margin: 0 auto;
    padding: 6rem 2rem 4rem;
  }

  .section-header {
    font-family: system-ui, -apple-system, sans-serif;
    font-size: 0.75rem;
    text-transform: uppercase;
    letter-spacing: 0.15em;
    color: #555555;
    margin-bottom: 2rem;
    text-align: center;
  }

  .cards-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 1.5rem;
  }

  .card {
    display: block;
    background: #111111;
    border: 1px solid #222222;
    border-radius: 4px;
    padding: 1.5rem;
    text-decoration: none;
    transition: border-color 0.2s ease;
  }

  .card:hover {
    border-color: #dc2626;
  }

  .card-label {
    display: block;
    font-family: 'IBM Plex Mono', monospace;
    font-size: 0.7rem;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: #dc2626;
    margin-bottom: 0.5rem;
  }

  .card-title {
    display: block;
    font-family: system-ui, -apple-system, sans-serif;
    font-size: 1rem;
    font-weight: 500;
    color: #ffffff;
  }

  /* Mobile */
  @media (max-width: 768px) {
    .hero {
      padding: 2rem;
    }

    .cards-grid {
      grid-template-columns: 1fr;
    }

    .button-row {
      flex-direction: column;
      align-items: center;
    }

    .btn {
      width: 100%;
      max-width: 280px;
      text-align: center;
    }
  }
</style>
