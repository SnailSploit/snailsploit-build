---
import BaseLayout from '../layouts/BaseLayout.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
import WebSiteSchema from '../components/schemas/WebSiteSchema.astro';
import PersonSchema from '../components/schemas/PersonSchema.astro';

const featuredArticles = [
  {
    title: 'Context Inheritance Exploit: Jailbroken Conversations Don\'t Die',
    description: 'Discovering how jailbroken states persist across GPT sessions through context inheritance.',
    url: '/ai-security/jailbreaking/context-inheritance-exploit',
    tags: ['jailbreaking', 'GPT', 'original-research'],
    date: '2025-01-04'
  },
  {
    title: 'The Custom Instruction Backdoor',
    description: 'Uncovering emergent prompt injection risks through ChatGPT custom instructions.',
    url: '/ai-security/prompt-injection/custom-instruction-backdoor',
    tags: ['prompt-injection', 'ChatGPT', 'backdoor'],
    date: '2025-05-18'
  },
  {
    title: 'MCP Security Threat Analysis',
    description: 'Comprehensive security analysis of the Model Context Protocol vulnerabilities.',
    url: '/ai-security/prompt-injection/mcp-threat-analysis',
    tags: ['MCP', 'prompt-injection', 'agentic-AI'],
    date: '2025-05-18'
  }
];
---

<BaseLayout
  title="Kai Aizen (SnailSploit) | GenAI Security Researcher"
  description="Security research on AI vulnerabilities, LLM jailbreaking, and adversarial AI. Creator of AATMF framework. 5 CVEs discovered. Published in Hakin9 Magazine."
  canonical="https://snailsploit.com/"
  ogImage="/images/og-default.jpg"
  keywords={[
    'AI security',
    'LLM jailbreaking',
    'adversarial AI',
    'GenAI security researcher',
    'AATMF'
  ]}
>
  <Navigation slot="header" />
  <WebSiteSchema />
  <PersonSchema />

  <!-- Hero Section -->
  <section class="relative py-20 md:py-32" style="background: linear-gradient(180deg, #0a0a0a 0%, #111 100%);">
    <div class="main-content fade-in">
      <div class="mb-6">
        <span class="terminal-prefix font-mono text-sm">whoami</span>
      </div>

      <h1 class="text-6xl md:text-8xl font-bold mb-6 leading-tight" style="font-family: var(--font-display); letter-spacing: 0.02em;">
        <span style="color: var(--color-accent-red);">KAI AIZEN</span><br />
        <span style="color: var(--color-text-primary);">THE JAILBREAK CHEF</span>
      </h1>

      <p class="text-xl md:text-2xl mb-8 leading-relaxed" style="color: var(--color-text-secondary);">
        Security Researcher & <span style="color: var(--color-accent-red);">5x CVE Holder</span>. Creator of the <span style="color: var(--color-text-primary);">AATMF</span> and <span style="color: var(--color-text-primary);">P.R.O.M.P.T</span> frameworks.
        Specializing in LLM jailbreaking, prompt injection, and adversarial AI.
      </p>

      <div class="flex flex-wrap gap-4">
        <a
          href="/about"
          class="px-6 py-3 font-mono font-semibold rounded hover:opacity-80 transition-all"
          style="background-color: var(--color-accent-red); color: #ffffff;"
        >
          Learn More →
        </a>
        <a
          href="/frameworks"
          class="px-6 py-3 font-mono font-semibold rounded border transition-all hover:bg-[var(--color-accent-red)] hover:border-[var(--color-accent-red)]"
          style="border-color: var(--color-accent-red); color: var(--color-accent-red);"
        >
          View Frameworks
        </a>
      </div>
    </div>
  </section>

  <!-- Credentials Section -->
  <section class="py-24">
    <div class="main-content">
      <div class="grid grid-cols-2 md:grid-cols-4 gap-4 md:gap-6">
      <div class="card-hover-glow p-6 rounded-lg" style="background-color: var(--color-surface); border: 1px solid var(--color-border);">
        <div class="text-3xl font-bold font-mono mb-2" style="color: var(--color-accent-red);">5</div>
        <div class="text-sm font-mono" style="color: var(--color-text-secondary);">CVE Disclosures</div>
      </div>
      <div class="card-hover-glow p-6 rounded-lg" style="background-color: var(--color-surface); border: 1px solid var(--color-border);">
        <div class="text-3xl font-bold font-mono mb-2" style="color: var(--color-accent-red);">3</div>
        <div class="text-sm font-mono" style="color: var(--color-text-secondary);">Security Frameworks</div>
      </div>
      <div class="card-hover-glow p-6 rounded-lg" style="background-color: var(--color-surface); border: 1px solid var(--color-border);">
        <div class="text-3xl font-bold font-mono mb-2" style="color: var(--color-accent-red);">20+</div>
        <div class="text-sm font-mono" style="color: var(--color-text-secondary);">Published Articles</div>
      </div>
      <div class="card-hover-glow p-6 rounded-lg" style="background-color: var(--color-surface); border: 1px solid var(--color-border);">
        <div class="text-3xl font-bold font-mono mb-2" style="color: var(--color-accent-red);">1</div>
        <div class="text-sm font-mono" style="color: var(--color-text-secondary);">Published Book</div>
      </div>
    </div>
  </section>

  <!-- Featured Research -->
  <section class="py-24">
    <div class="main-content">
      <h2 class="section-header text-3xl font-bold font-mono mb-12" style="color: var(--color-accent-red);">
        Featured Research
      </h2>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
      {featuredArticles.map(article => (
        <a
          href={article.url}
          class="card-hover-glow group p-6 rounded-lg transition-all hover:scale-[1.02]"
          style="background-color: var(--color-surface); border: 1px solid var(--color-border);"
        >
          <div class="flex flex-wrap gap-2 mb-4">
            {article.tags.map(tag => (
              <span
                class="px-2 py-1 text-xs font-mono rounded"
                style="background-color: var(--color-bg); color: var(--color-text-muted);"
              >
                {tag}
              </span>
            ))}
          </div>

          <h3 class="text-xl font-bold font-mono mb-3 group-hover:text-[var(--color-accent-red)] transition-colors" style="color: var(--color-text-primary);">
            {article.title}
          </h3>

          <p class="text-sm mb-4" style="color: var(--color-text-secondary);">
            {article.description}
          </p>

          <div class="text-xs font-mono" style="color: var(--color-text-muted);">
            {new Date(article.date).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}
          </div>
        </a>
      ))}
    </div>

      <div class="text-center mt-12">
        <a
          href="/ai-security"
          class="inline-block px-6 py-3 font-mono font-semibold rounded border transition-colors hover:bg-[var(--color-accent-red)] hover:border-[var(--color-accent-red)]"
          style="border-color: var(--color-accent-red); color: var(--color-accent-red);"
        >
          View All Research →
        </a>
      </div>
    </div>
  </section>

  <!-- Frameworks Section -->
  <section class="py-24">
    <div class="main-content">
      <h2 class="section-header text-3xl font-bold font-mono mb-12" style="color: var(--color-accent-red);">
        Security Frameworks
      </h2>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
      <a
        href="/frameworks/aatmf"
        class="card-hover-glow group p-8 rounded-lg transition-all hover:scale-[1.02]"
        style="background-color: var(--color-surface); border: 1px solid var(--color-border);"
      >
        <h3 class="text-2xl font-bold font-mono mb-3 group-hover:text-[var(--color-accent-red)] transition-colors" style="color: var(--color-text-primary);">
          AATMF
        </h3>
        <p class="text-sm mb-4" style="color: var(--color-text-secondary);">
          Adversarial AI Threat Modeling Framework. 14 tactics, 40+ techniques, quantitative risk scoring.
        </p>
      </a>

      <a
        href="/frameworks/prompt"
        class="card-hover-glow group p-8 rounded-lg transition-all hover:scale-[1.02]"
        style="background-color: var(--color-surface); border: 1px solid var(--color-border);"
      >
        <h3 class="text-2xl font-bold font-mono mb-3 group-hover:text-[var(--color-accent-red)] transition-colors" style="color: var(--color-text-primary);">
          P.R.O.M.P.T
        </h3>
        <p class="text-sm mb-4" style="color: var(--color-text-secondary);">
          Systematic prompt engineering methodology. Purpose, Results, Obstacles, Mindset, Preferences, Technical.
        </p>
      </a>

      <a
        href="/frameworks/sef"
        class="card-hover-glow group p-8 rounded-lg transition-all hover:scale-[1.02]"
        style="background-color: var(--color-surface); border: 1px solid var(--color-border);"
      >
        <h3 class="text-2xl font-bold font-mono mb-3 group-hover:text-[var(--color-accent-red)] transition-colors" style="color: var(--color-text-primary);">
          SEF
        </h3>
        <p class="text-sm mb-4" style="color: var(--color-text-secondary);">
          Social Engineering Framework. Structured methodology for SE assessments. Coming soon.
        </p>
      </a>
    </div>
    </div>
  </section>

  <Footer slot="footer" />
</BaseLayout>
