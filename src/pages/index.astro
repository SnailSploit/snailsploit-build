---
import BaseLayout from '../layouts/BaseLayout.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
import WebSiteSchema from '../components/schemas/WebSiteSchema.astro';
import PersonSchema from '../components/schemas/PersonSchema.astro';
import OrganizationSchema from '../components/schemas/OrganizationSchema.astro';

// Homepage FAQ schema for rich results
const homepageFaqSchema = {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  "mainEntity": [
    {
      "@type": "Question",
      "name": "Who is Kai Aizen (SnailSploit)?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Kai Aizen, known as SnailSploit or The Jailbreak Chef, is a GenAI security researcher specializing in LLM jailbreaking, prompt injection, and adversarial AI. He has discovered 6 CVEs, created the AATMF threat modeling framework, and authored the book Adversarial Minds on social engineering psychology."
      }
    },
    {
      "@type": "Question",
      "name": "What is the AATMF framework?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "AATMF (Adversarial AI Threat Modeling Framework) is an open-source framework for AI red teaming with 14 tactics and 40+ techniques. It provides quantitative risk scoring and integrates with MITRE ATT&CK for comprehensive AI security assessments."
      }
    },
    {
      "@type": "Question",
      "name": "What is LLM jailbreaking?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "LLM jailbreaking refers to techniques used to bypass safety guardrails and content policies in large language models like ChatGPT. This includes prompt injection, context manipulation, and multi-turn attacks that exploit how AI systems process and respond to inputs."
      }
    },
    {
      "@type": "Question",
      "name": "What CVEs has Kai Aizen discovered?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Kai Aizen has discovered 6 CVEs in WordPress plugins including CVE-2025-9776, CVE-2025-11171, CVE-2025-11174, CVE-2025-12030, CVE-2025-12163, and CVE-2026-1208."
      }
    }
  ]
};

const featuredCards = [
  {
    label: 'Framework',
    title: 'AATMF — Adversarial AI Threat Modeling',
    description: 'Comprehensive framework for AI red teaming and security assessment.',
    stats: ['14 tactics', '40+ techniques'],
    url: '/frameworks/aatmf/',
    icon: 'shield'
  },
  {
    label: 'Research',
    title: 'LLM Jailbreaking & Prompt Injection',
    description: 'Original research on bypassing AI guardrails and safety mechanisms.',
    stats: ['Novel techniques', 'Defense strategies'],
    url: '/ai-security/',
    icon: 'terminal'
  },
  {
    label: 'Book',
    title: 'Adversarial Minds',
    description: 'The psychology of social engineering and human manipulation.',
    stats: ['Published 2024', 'Social Engineering'],
    url: '/adversarial-minds/',
    icon: 'book'
  }
];

const cves = [
  { id: 'CVE-2025-9776', plugin: 'CatFolders', type: 'SQL Injection', severity: 'High', url: '/security-research/cves/cve-2025-9776/' },
  { id: 'CVE-2025-12030', plugin: 'ACF to REST API', type: 'IDOR', severity: 'High', url: '/security-research/cves/cve-2025-12030/' },
  { id: 'CVE-2025-11171', plugin: 'Chartify', type: 'Missing Auth', severity: 'Medium', url: '/security-research/cves/cve-2025-11171/' },
  { id: 'CVE-2025-12163', plugin: 'OmniPress', type: 'XSS', severity: 'Medium', url: '/security-research/cves/cve-2025-12163/' },
];

const latestArticles = [
  {
    title: 'MCP Security Deep Dive: Real-World Vulnerabilities',
    category: 'AI Security',
    url: '/ai-security/prompt-injection/mcp-security-deep-dive/',
    date: 'Aug 2025'
  },
  {
    title: 'The Custom Instruction Backdoor',
    category: 'Prompt Injection',
    url: '/ai-security/prompt-injection/custom-instruction-backdoor/',
    date: 'May 2025'
  },
  {
    title: 'Zero-Trust Runtime Security',
    category: 'Container Security',
    url: '/security-research/general/zero-trust-container-runtime/',
    date: 'Aug 2025'
  }
];
---

<BaseLayout
  title="Kai Aizen (SnailSploit) | GenAI Security Researcher"
  description="Security research on AI vulnerabilities, LLM jailbreaking, and adversarial AI. Creator of AATMF framework. 6 CVEs discovered. Published in Hakin9 Magazine."
  canonical="https://snailsploit.com/"
  ogImage="/images/og-default.jpg"
  keywords={[
    'AI security',
    'LLM jailbreaking',
    'adversarial AI',
    'GenAI security researcher',
    'AATMF'
  ]}
>
  <Navigation slot="header" />
  <WebSiteSchema />
  <PersonSchema />
  <OrganizationSchema />
  <script type="application/ld+json" set:html={JSON.stringify(homepageFaqSchema)} />

  <main class="homepage">
    <!-- Loading Screen -->
    <div id="loading-screen" class="loading-screen">
      <video
        id="loading-video"
        class="loading-video"
        autoplay
        muted
        playsinline
        preload="auto"
      >
        <source src="/videos/logo-transition.mp4" type="video/mp4" />
      </video>
    </div>

    <!-- Hero Section -->
    <section class="hero">
      <!-- Grid background -->
      <div class="hero-grid"></div>
      <!-- Gradient orb -->
      <div class="hero-orb"></div>
      <div class="hero-orb-secondary"></div>

      <div class="hero-content">
        <h1 class="headline">
          <span class="line1">The <span class="accent">Human</span> Link in</span>
          <span class="line2">Adversarial Security</span>
        </h1>

        <p class="subtitle">
          Bridging technical exploitation and psychological manipulation<br class="hide-mobile" /> through adversarial AI research.
        </p>

        <!-- Credentials as badges -->
        <div class="credentials-badges">
          <span class="badge badge-green">
            <svg class="badge-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"/>
            </svg>
            Creator of AATMF
          </span>
          <span class="badge badge-default">
            <svg class="badge-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M4 19.5A2.5 2.5 0 0 1 6.5 17H20"/>
              <path d="M6.5 2H20v20H6.5A2.5 2.5 0 0 1 4 19.5v-15A2.5 2.5 0 0 1 6.5 2z"/>
            </svg>
            Author of Adversarial Minds
          </span>
          <span class="badge badge-purple">
            <svg class="badge-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <circle cx="12" cy="12" r="10"/>
              <path d="M12 16v-4M12 8h.01"/>
            </svg>
            6 CVEs Discovered
          </span>
        </div>

        <p class="byline">Kai Aizen — SnailSploit / The Jailbreak Chef</p>

        <div class="button-row">
          <a href="/about/" class="btn btn-primary group">
            <span>About Me</span>
            <svg class="btn-arrow" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M5 12h14M12 5l7 7-7 7"/>
            </svg>
          </a>
          <a href="/frameworks/" class="btn btn-secondary">
            <span>View Frameworks</span>
          </a>
        </div>
      </div>

      <div class="scroll-indicator">
        <span>Scroll</span>
        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M12 5v14M5 12l7 7 7-7"/>
        </svg>
      </div>
    </section>

    <!-- Featured Section -->
    <section class="featured">
      <div class="section-header-wrapper">
        <div class="section-line"></div>
        <h2 class="section-header">Recent Work</h2>
        <div class="section-line"></div>
      </div>

      <div class="cards-grid">
        {featuredCards.map((card, index) => (
          <a href={card.url} class="card group" style={`animation-delay: ${index * 0.1}s`}>
            <div class="card-glow"></div>
            <div class="card-inner">
              <span class="card-label">{card.label}</span>

              <div class="card-icon">
                {card.icon === 'shield' && (
                  <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                    <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"/>
                  </svg>
                )}
                {card.icon === 'terminal' && (
                  <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                    <polyline points="4 17 10 11 4 5"/>
                    <line x1="12" y1="19" x2="20" y2="19"/>
                  </svg>
                )}
                {card.icon === 'book' && (
                  <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                    <path d="M4 19.5A2.5 2.5 0 0 1 6.5 17H20"/>
                    <path d="M6.5 2H20v20H6.5A2.5 2.5 0 0 1 4 19.5v-15A2.5 2.5 0 0 1 6.5 2z"/>
                  </svg>
                )}
              </div>

              <h3 class="card-title">{card.title}</h3>
              <p class="card-description">{card.description}</p>

              <div class="card-stats">
                {card.stats.map((stat, i) => (
                  <>
                    <span>{stat}</span>
                    {i < card.stats.length - 1 && <span class="stat-sep">•</span>}
                  </>
                ))}
              </div>

              <span class="card-arrow">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M7 17L17 7M17 7H7M17 7v10"/>
                </svg>
              </span>
            </div>
          </a>
        ))}
      </div>
    </section>

    <!-- CVE Showcase -->
    <section class="cve-section">
      <div class="cve-container">
        <div class="cve-header">
          <h2 class="cve-title">Vulnerability Discoveries</h2>
          <a href="/security-research/cves/" class="cve-link">View all CVEs →</a>
        </div>

        <div class="cve-list">
          {cves.map((cve) => (
            <a href={cve.url} class="cve-row">
              <div class="cve-info">
                <span class="cve-id">{cve.id}</span>
                <p class="cve-plugin">{cve.plugin} — {cve.type}</p>
              </div>
              <span class={`cve-severity severity-${cve.severity.toLowerCase()}`}>{cve.severity}</span>
            </a>
          ))}
        </div>
      </div>
    </section>

    <!-- Trust Bar -->
    <section class="trust-bar">
      <p class="trust-label">Featured & Recognized By</p>
      <div class="trust-logos">
        <span class="trust-item">Wordfence</span>
        <span class="trust-item">Hakin9 Magazine</span>
        <span class="trust-item">PenTest Magazine</span>
        <span class="trust-item">MITRE CVE</span>
      </div>
    </section>

    <!-- Latest Articles -->
    <section class="articles-section">
      <div class="articles-container">
        <div class="articles-header">
          <h2 class="articles-title">Latest Research</h2>
          <a href="/writing/" class="articles-link">View all →</a>
        </div>

        <div class="articles-grid">
          {latestArticles.map((article) => (
            <a href={article.url} class="article-card">
              <span class="article-category">{article.category}</span>
              <h3 class="article-title">{article.title}</h3>
              <span class="article-date">{article.date}</span>
            </a>
          ))}
        </div>
      </div>
    </section>

    <!-- Contact CTA -->
    <section class="cta-section">
      <div class="cta-container">
        <h2 class="cta-title">Let's Work Together</h2>
        <p class="cta-description">
          Available for security research, red team engagements, and AI safety consulting.
        </p>
        <a href="mailto:kai@snailsploit.com" class="btn btn-primary">
          <span>Get in Touch</span>
          <svg class="btn-arrow" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M5 12h14M12 5l7 7-7 7"/>
          </svg>
        </a>
      </div>
    </section>
  </main>

  <Footer slot="footer" />
</BaseLayout>

<style>
  .homepage {
    background: #0D1117;
    min-height: 100vh;
  }

  /* Hero Section */
  .hero {
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 2rem 4rem;
    position: relative;
    overflow: hidden;
  }

  .hero-grid {
    position: absolute;
    inset: 0;
    background-image:
      linear-gradient(rgba(57, 255, 20, 0.03) 1px, transparent 1px),
      linear-gradient(90deg, rgba(57, 255, 20, 0.03) 1px, transparent 1px);
    background-size: 60px 60px;
    opacity: 0.5;
  }

  .hero-orb {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 800px;
    height: 800px;
    background: radial-gradient(circle, rgba(57, 255, 20, 0.12) 0%, transparent 60%);
    pointer-events: none;
    animation: float 8s ease-in-out infinite;
  }

  .hero-orb-secondary {
    position: absolute;
    top: 30%;
    right: 20%;
    width: 400px;
    height: 400px;
    background: radial-gradient(circle, rgba(189, 52, 254, 0.08) 0%, transparent 60%);
    pointer-events: none;
    animation: float 10s ease-in-out infinite reverse;
  }

  @keyframes float {
    0%, 100% { transform: translate(-50%, -50%) scale(1); }
    50% { transform: translate(-50%, -48%) scale(1.05); }
  }

  .hero-content {
    max-width: 1000px;
    text-align: center;
    position: relative;
    z-index: 1;
    animation: fadeInUp 0.8s ease-out;
  }

  @keyframes fadeInUp {
    from { opacity: 0; transform: translateY(30px); }
    to { opacity: 1; transform: translateY(0); }
  }

  /* Loading Screen */
  .loading-screen {
    position: fixed;
    inset: 0;
    z-index: 9999;
    background: #0D1117;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: opacity 0.5s ease, visibility 0.5s ease;
  }

  .loading-screen.hidden {
    opacity: 0;
    visibility: hidden;
    pointer-events: none;
  }

  .loading-video {
    width: 200px;
    height: 200px;
    object-fit: contain;
  }

  .headline {
    font-family: 'Space Grotesk', var(--font-display), sans-serif;
    font-size: clamp(3rem, 8vw, 5.5rem);
    font-weight: 700;
    line-height: 1.05;
    margin-bottom: 1.5rem;
    letter-spacing: -0.03em;
  }

  .headline .line1 {
    display: block;
    color: #E6EDF3;
  }

  .headline .line2 {
    display: block;
    background: linear-gradient(135deg, #6e7681, #484f58);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .headline .accent {
    background: linear-gradient(135deg, #39FF14, #7dff5e);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    position: relative;
  }

  .subtitle {
    font-family: 'Inter', var(--font-sans), sans-serif;
    font-size: 1.25rem;
    color: #8B949E;
    line-height: 1.7;
    max-width: 650px;
    margin: 0 auto 2rem;
  }

  /* Credential Badges */
  .credentials-badges {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 0.75rem;
    margin-bottom: 1.5rem;
  }

  .badge {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 1rem;
    border-radius: 100px;
    font-family: 'Inter', var(--font-sans), sans-serif;
    font-size: 0.85rem;
    font-weight: 500;
    transition: all 0.3s ease;
  }

  .badge-icon {
    width: 16px;
    height: 16px;
  }

  .badge-green {
    background: rgba(57, 255, 20, 0.1);
    border: 1px solid rgba(57, 255, 20, 0.3);
    color: #39FF14;
  }

  .badge-green:hover {
    background: rgba(57, 255, 20, 0.15);
    border-color: rgba(57, 255, 20, 0.5);
  }

  .badge-default {
    background: rgba(139, 148, 158, 0.1);
    border: 1px solid rgba(139, 148, 158, 0.3);
    color: #E6EDF3;
  }

  .badge-purple {
    background: rgba(189, 52, 254, 0.1);
    border: 1px solid rgba(189, 52, 254, 0.3);
    color: #BD34FE;
  }

  .byline {
    font-family: 'JetBrains Mono', var(--font-mono), monospace;
    font-size: 0.875rem;
    color: #6e7681;
    margin-bottom: 2.5rem;
  }

  .button-row {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
  }

  .btn {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 1rem 2rem;
    border-radius: 8px;
    font-family: 'Inter', var(--font-sans), sans-serif;
    font-size: 0.95rem;
    font-weight: 600;
    text-decoration: none;
    transition: all 0.3s ease;
  }

  .btn-arrow {
    transition: transform 0.3s ease;
  }

  .btn-primary {
    background: #39FF14;
    color: #0D1117;
    border: none;
    box-shadow: 0 4px 20px rgba(57, 255, 20, 0.3);
  }

  .btn-primary:hover {
    background: #4dff33;
    box-shadow: 0 8px 30px rgba(57, 255, 20, 0.4);
    transform: translateY(-2px);
  }

  .btn-primary:hover .btn-arrow {
    transform: translateX(4px);
  }

  .btn-secondary {
    background: transparent;
    color: #E6EDF3;
    border: 1px solid #30363D;
  }

  .btn-secondary:hover {
    border-color: #39FF14;
    color: #39FF14;
    background: rgba(57, 255, 20, 0.05);
  }

  .scroll-indicator {
    position: absolute;
    bottom: 2rem;
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.5rem;
    color: #484f58;
    font-family: 'JetBrains Mono', var(--font-mono), monospace;
    font-size: 0.7rem;
    text-transform: uppercase;
    letter-spacing: 0.15em;
    animation: bounce 2s ease-in-out infinite;
  }

  @keyframes bounce {
    0%, 100% { transform: translateX(-50%) translateY(0); }
    50% { transform: translateX(-50%) translateY(6px); }
  }

  .hide-mobile { display: inline; }

  /* Featured Section */
  .featured {
    max-width: 1200px;
    margin: 0 auto;
    padding: 6rem 2rem 8rem;
  }

  .section-header-wrapper {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 2rem;
    margin-bottom: 4rem;
  }

  .section-line {
    flex: 1;
    max-width: 150px;
    height: 1px;
    background: linear-gradient(90deg, transparent, #30363D, transparent);
  }

  .section-header {
    font-family: 'JetBrains Mono', var(--font-mono), monospace;
    font-size: 0.8rem;
    text-transform: uppercase;
    letter-spacing: 0.25em;
    color: #6e7681;
    margin: 0;
    white-space: nowrap;
  }

  .cards-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 1.5rem;
  }

  .card {
    display: block;
    position: relative;
    background: rgba(22, 27, 34, 0.5);
    border: 1px solid #30363D;
    border-radius: 16px;
    text-decoration: none;
    transition: all 0.4s cubic-bezier(0.16, 1, 0.3, 1);
    overflow: hidden;
    animation: fadeInUp 0.6s ease-out backwards;
  }

  .card-glow {
    position: absolute;
    inset: 0;
    background: linear-gradient(135deg, rgba(57, 255, 20, 0.08) 0%, transparent 50%);
    opacity: 0;
    transition: opacity 0.4s ease;
  }

  .card:hover {
    border-color: rgba(57, 255, 20, 0.5);
    transform: translateY(-6px);
    box-shadow: 0 25px 50px rgba(0, 0, 0, 0.4), 0 0 40px rgba(57, 255, 20, 0.1);
  }

  .card:hover .card-glow {
    opacity: 1;
  }

  .card-inner {
    padding: 2rem;
    position: relative;
    z-index: 1;
  }

  .card-label {
    display: inline-block;
    font-family: 'JetBrains Mono', var(--font-mono), monospace;
    font-size: 0.7rem;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: #39FF14;
    margin-bottom: 1.25rem;
    padding: 0.35rem 0.75rem;
    background: rgba(57, 255, 20, 0.1);
    border-radius: 4px;
  }

  .card-icon {
    width: 48px;
    height: 48px;
    margin-bottom: 1.25rem;
    padding: 12px;
    background: rgba(57, 255, 20, 0.1);
    border-radius: 12px;
    color: #39FF14;
    transition: all 0.3s ease;
  }

  .card-icon svg {
    width: 100%;
    height: 100%;
  }

  .card:hover .card-icon {
    background: rgba(57, 255, 20, 0.15);
    transform: scale(1.05);
  }

  .card-title {
    display: block;
    font-family: 'Space Grotesk', var(--font-display), sans-serif;
    font-size: 1.25rem;
    font-weight: 600;
    color: #E6EDF3;
    margin-bottom: 0.75rem;
    line-height: 1.4;
    transition: color 0.3s ease;
  }

  .card:hover .card-title {
    color: #39FF14;
  }

  .card-description {
    display: block;
    font-family: 'Inter', var(--font-sans), sans-serif;
    font-size: 0.9rem;
    color: #8B949E;
    line-height: 1.6;
    margin-bottom: 1.25rem;
  }

  .card-stats {
    font-family: 'JetBrains Mono', var(--font-mono), monospace;
    font-size: 0.75rem;
    color: #6e7681;
  }

  .stat-sep {
    margin: 0 0.5rem;
    color: #30363D;
  }

  .card-arrow {
    position: absolute;
    top: 2rem;
    right: 2rem;
    color: #484f58;
    transition: all 0.3s ease;
  }

  .card:hover .card-arrow {
    color: #39FF14;
    transform: translate(4px, -4px);
  }

  /* CVE Section */
  .cve-section {
    padding: 5rem 2rem;
    border-top: 1px solid #21262d;
    background: rgba(13, 17, 23, 0.5);
  }

  .cve-container {
    max-width: 900px;
    margin: 0 auto;
  }

  .cve-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 2rem;
  }

  .cve-title {
    font-family: 'Space Grotesk', var(--font-display), sans-serif;
    font-size: 1.75rem;
    font-weight: 600;
    color: #E6EDF3;
  }

  .cve-link {
