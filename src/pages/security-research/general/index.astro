import HubLayout from '../../../layouts/HubLayout.astro';

const glossary = [
  {
    term: "Container Escape",
    definition: "Breaking out of a containerized environment to access the host system or other containers. Critical vulnerability class in cloud-native infrastructure.",
    link: "/security-research/general/advanced-container-escapes/"
  },
  {
    term: "EDR Evasion",
    definition: "Techniques to bypass Endpoint Detection and Response solutions. Understanding evasion helps improve detection capabilities.",
    link: "/security-research/general/edr-evasion-techniques/"
  },
  {
    term: "Zero-Trust Architecture",
    definition: "Security model that requires continuous verification regardless of network location. 'Never trust, always verify' applied to container runtimes.",
    link: "/security-research/general/zero-trust-container-runtime/"
  },
  {
    term: "Cloud Penetration Testing",
    definition: "Authorized security assessment of cloud infrastructure including misconfigurations, IAM flaws, and service-specific vulnerabilities.",
    link: "/security-research/general/cloud-vulnerability-exploitation/"
  },
  {
    term: "Runtime Attestation",
    definition: "Cryptographic verification that a system is running expected code in an expected configuration. Key component of zero-trust container security."
  }
];

